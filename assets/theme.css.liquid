/* @charset "UTF-8"; */

/* resets  */
* {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

li {
  list-style: none;
}

a {
  text-decoration: none;
}

:root {
  --colorAnnouncement: {{ settings.announcement_bg_color }}
  ;
  --colorAnnouncementText: {{ settings.announcement_text_color }}
  ;
}

.page__width {
  max-width: 1420px;
  margin: 0 auto;
  padding: 0 17px;
}
@media only screen and (min-width: 769px) {
  .page__width {
    padding: 0 40px;
  }
}
/* Announcement Bar  */
.announcement__bar {
  background: var(--colorAnnouncement);
  color: var(--colorAnnouncementText);
  padding: 10px 0;
}

.announcement__wrapper {
  text-align: center;
}

.main__heading {
  font-size: 13px;
  padding-bottom: 6px;
}

.main__timer {
  font-size: 14px;
  color: #EDC128;
  font-weight: bold;
}
.main__text {
  display: none;
}
.social__container {
  display: none;
}
.language__currency-container {
  display: none;
}
@media only screen and (min-width: 769px) {
  .main__announcement-banner {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }

  .main__heading {
    padding: 0;
  }
  .main__text {
    display: block;
  }
  .social__container {
    display: block;
  }
  .language__currency-container {
    display: block;
  }
  .social__icons-list li {
    display: inline-block;
  }

  .social__icons-list .icon {
    width: 16px;
    height: 16px;
    fill: var(--colorAnnouncementText);
    position: relative;
  }

  .social__fallback-text {
    display: none;
  }

  .social__icons-list a {
    color: var(--colorAnnouncementText);
    display: block;
    padding: 5px;
  }
}