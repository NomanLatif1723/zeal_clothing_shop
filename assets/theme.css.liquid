/* @charset "UTF-8"; */

/* resets  */
* {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

li {
  list-style: none;
}

a {
  text-decoration: none;
}

h2 {
  font-size: 26px;
  line-height: 42px;
}

.rte {
  font-size: 14px;
  line-height: 26px;
}

.rte p {
  margin-bottom: 12px;
}

@media only screen and (max-width: 769px;) {
  .rte p {
    margin-bottom: 0;
    display: inline;
  }
}


:root {
  --colorAnnouncement: {{ settings.announcement_bg_color }}
  ;
  --colorAnnouncementText: {{ settings.announcement_text_color }}
  ;
}

.page__width {
  max-width: 1420px;
  margin: 0 auto;
  padding: 0 17px;
}
@media only screen and (min-width: 769px) {
  .page__width {
    padding: 0 40px;
  }
}
/* Announcement Bar  */
.announcement__bar {
  background: var(--colorAnnouncement);
  color: var(--colorAnnouncementText);
  padding: 10px 0;
}

.announcement__wrapper {
  text-align: center;
}

.main__heading {
  font-size: 13px;
  padding-bottom: 6px;
}

.main__timer {
  font-size: 14px;
  color: #EDC128;
  font-weight: bold;
}
.main__text {
  display: none;
}
.social__container {
  display: none;
}
.language__currency-container {
  display: none;
}
@media only screen and (min-width: 769px) {
  .main__announcement-banner {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }
  .announcement__wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .main__heading {
    padding: 0;
  }
  .main__text {
    display: block;
  }
  .social__container {
    display: block;
  }
  .language__currency-container {
    display: block;
  }
  .social__icons-list li {
    display: inline-block;
  }

  .social__icons-list .icon {
    width: 16px;
    height: 16px;
    fill: var(--colorAnnouncementText);
    position: relative;
  }

  .social__fallback-text {
    display: none;
  }

  .social__icons-list a {
    color: var(--colorAnnouncementText);
    display: block;
    padding: 5px;
  }
}

/* Richtext section */

.text__align-center {
  text-align: center;
}

.text__align-left {
  text-align: left;
}

.text__align-right {
  text-align: right;
}

.sub__heading {
  font-size: 14px;
  line-height: 18px;
  padding-bottom: 8px;
}



a.btn {
  color: white;
  font-size: 13px;
  letter-spacing: 0.2em;
}

.rich-text__buttons .rte {
  padding: 14px 22px;
  background: black;
  margin-bottom: 10px;

}

.text__wrapper {
  max-width: 920px;
  margin: 0 auto;
}

.rich-text__text {
  padding: 15px 0 30px;
}
@media only screen and (min-width: 769px) {
  .rich-text__buttons {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
  }
}