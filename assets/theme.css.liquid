/* @charset "UTF-8"; */

/* resets  */
*,:before ,:after ,
input {
  box-sizing: border-box;
}

body,
html {
  padding: 0;
  margin: 0;
}

li {
  list-style: none;
}

a {
  text-decoration: none;
  color: #111111;
}
ul {
  margin: 0;
  padding: 0;
}

h1,
h2,
h3,
h4,
h5,
h6,
p {
  margin: 0;
}
h1 {
  font-size: 64px;
  line-height: 104px;
}

h2 {
  font-size: 18px;
  line-height: 30px;
}

h3 {
  font-size: 18px;
  line-height: 30px;
}

h4 {
  font-size: 14px;
  line-height: 28px;
}

img {
  display: block;
  width: 100%;
  max-width: 100%;
}

input,
select,
textarea {
  background-color: inherit;
  color: inherit;
  padding: 12px 15px;
  border: 1px solid black;
}
.rte {
  font-size: 14px;
  line-height: 26px;
  color: rgba(1, 1, 1, 0.6);
}

.rte p {
  margin-bottom: 12px;
}

.visually__hidden {
  position: absolute;
  clip: rect(0 0 0 0);
}


@media only screen and (min-width: 769px) {
  h2 {
    font-size: 26px;
    line-height: 42px;
  }
  .rte p {
    margin-bottom: 0;
    display: inline;
  }
}

@font-face {
  font-family: 'Monda-Regular';
  src: url("https://cdn.shopify.com/s/files/1/0794/3716/8962/files/Monda-Regular.woff2?v=1689596069");
}

:root {
  --colorAnnouncement: {{ settings.announcement_bg_color }}
  ;
  --colorAnnouncementText: {{ settings.announcement_text_color }}
  ;
  --colorButton: {{ settings.color_button }}
  ;
  --colorButtonText: {{ settings.color_button_text }}
  ;
  --colorOutlineButton: {{ settings.color_outline_button }}
  ;

  --bodyTextFont: {{ settings.body_font_family }}
  ;
  --headingTextFont: {{ settings.heading_font_family }}
  ;

  --bodyBackgroundColor: {{ settings.body_bg_color }}
  ;
  --bodyTextColor: {{ settings.body_text_color }}
  ;

  /* not used yet */
  --borderColor: {{ settings.border_color }}
  ;

}

body {
  font-family: var(--bodyTextFont) !important;
}
.page__width {
  max-width: 1420px;
  margin: 0 auto;
  padding: 0 17px;
}
@media only screen and (min-width: 769px) {
  .page__width {
    padding: 0 40px;
  }
}
/* Announcement Bar  */
.announcement__bar {
  background: var(--colorAnnouncement);
  color: var(--colorAnnouncementText);
  padding: 10px 0;
}

.announcement__wrapper {
  text-align: center;
}

.main__heading {
  font-size: 13px;
  padding-bottom: 6px;
}

.main__timer {
  font-size: 14px;
  color: #EDC128;
  font-weight: bold;
}
.main__text {
  display: none;
}
.social__container {
  display: none;
}
.social__icons-list li {
  display: inline-block;
}

.social__icons-list .icon {
  width: 16px;
  height: 16px;
  fill: var(--colorAnnouncementText);
  position: relative;
}

.social__fallback-text {
  display: none;
}

.social__icons-list a {
  color: var(--colorAnnouncementText);
  display: block;
  padding: 5px;
}
.language__currency-container {
  display: none;
}
@media only screen and (min-width: 769px) {
  .main__announcement-banner {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }
  .announcement__wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .main__heading {
    padding: 0;
  }
  .main__text {
    display: block;
  }
  .social__container {
    display: block;
  }
  .language__currency-container {
    display: block;
  }
}

/* Richtext section */

.text__align-center {
  text-align: center;
}

.text__align-left {
  text-align: left;
}

.text__align-right {
  text-align: right;
}

.sub__heading {
  font-size: 14px;
  line-height: 18px;
  padding-bottom: 8px;
}

.btn {
  padding: 14px 22px;
  margin-bottom: 10px;
  display: inline-block;
}

.btn__link {
  color: var(--colorButtonText);
  font-size: 13px;
  letter-spacing: 0.2em;
}

.btn__primary {
  background: var(--colorButton);
}

.text__wrapper {
  max-width: 920px;
  margin: 0 auto;
}

.rich-text__text {
  padding: 15px 0 30px;
}
@media only screen and (min-width: 769px) {
  .rich-text__buttons {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
  }
}


/* newsletter section */

.newsletter__content {
  text-align: center;
}

.newsletter__banner {
  padding: 20px 0;
}

.newsletter__input-group input {
  margin: 10px 0 15px;
  width: 100%;
  border: none;
  background: white;
}

.newsletter__input-group .btn {
  font-size: 14px;
  line-height: 22px;
  background: black;
  color: white;
  padding: 14px 22px;
  border: none;
  cursor: pointer;
  margin: 0;
}
@media only screen and (min-width: 769px) {
  .newsletter__banner {
    padding: 30px 0;
  }
  .newsletter__input-group input {
    margin: 0;
    width: auto;
  }
  .newsletter__input-group {
    display: flex;
    justify-content: center;
  }
  .newsletter__content {
    display: flex;
    align-items: center;
    justify-content: center;
    max-width: 920px;
    margin: 0 auto;
  }

  .newsletter__block {
    width: 50%;
  }
}

/* Text with Icon section */

.text__image-wrapper {
  text-align: center;
}

.text__image-item {
  padding: 30px 50px;
}

.placeholder__Image {
  width: 100%;
  height: 100%;
  background: #e1e1e1;
  fill: #999;
  padding: 30px 0;
  max-width: 100%;
  max-height: 100%;
}

.icon__placeholder {
  width: 150px !important;
  height: 150px !important;
}


.text__image-item:nth-child(2) {
  border-left: none;
  border-right: none;
  width: 30%;
}

.text__image-heading {
  padding: 10px 0;
}

.brand__logo-img {
  width: 40px;
  height: 40px;
  display: inline-block;
}

.text__container-desktop {
  display: none;
}

.swiper-button-next:after,
.swiper-button-prev:after {
  color: #808183;
  font-size: 20px !important;
  font-weight: bold;
}

@media only screen and (min-width: 769px) {
  .text__image-wrapper {
    display: flex;
    justify-content: center;
  }
  .text__image-item {
    width: 35%;
    padding: 50px 30px;
    border: 1px solid rgba(1, 1, 1, 0.1);
    border-top: none;
  }
  .text__container-desktop {
    display: block;
  }
  .text__container-mobile {
    display: none !important;
  }
}

/* Footer Section */

.footer__socials .icon {
  fill: #111111;
}

h1.site__footer-logo {
  font-size: 32px;
  line-height: 64px;
  padding-bottom: 10px;
}

footer.site__footer {
  text-align: center;
}

.site__grid-item {
  border-bottom: 1px solid rgba(1, 1, 1, 0.1);
  padding: 30px 0;
}

.site__item-block h4 {
  padding-bottom: 15px;
}

@media only screen and (min-width: 769px) {
  footer.site__footer {
    text-align: left;
  }
  .site__grid-item {
    border: none;
  }
  .block__item {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  .block__item .icon {
    display: inline-flex;
  }

  .address__bar-wrapper {
    display: flex;
    justify-content: center;
  }
  .footer__address-bar {
    border-bottom: 1px solid rgba(255,255,255,0.3);
    padding: 15px 0;
  }
  
  .footer__copyright-bar {
      padding: 15px 0;
  }
  
  .copyright__bar-wrapper {
      display: flex;
      justify-content: space-between;
  }
}