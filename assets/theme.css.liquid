/* @charset "UTF-8"; */

/* reset  */
* {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

:root {
  --colorAnnouncement: {{ settings.announcement_bg_color }}
  ;
  --colorAnnouncementText: {{ settings.announcement_text_color }}
  ;

}

.page__width {
  max-width: 1420px;
  margin: 0 auto;
  padding: 0 17px;
}
@media only screen and (min-width: 769px) {
  .page__width {
    padding: 0 40px;
  }
}
/* Announcement Bar  */
.announcement__bar {
  background: var(--colorAnnouncement);
  color: var(--colorAnnouncementText);
  padding: 10px 0;
}

.announcement__wrapper {
  text-align: center;
}

.main__heading {
  font-size: 13px;
  padding-bottom: 6px;
}

.main__timer {
  font-size: 14px;
  color: #EDC128;
  font-weight: bold;
}
.main__text {
  display: none;
}
@media only screen and (min-width: 769px) {
  .main__announcement-banner {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }

  .main__heading {
    padding: 0;
  }
  .main__text {
    display: block;
  }
}