{% render 'announcement-bar', section: section %}
{% schema %}
  {
    "name": "t:sections.header.settings.header_announcement",
    "settings": [
      {
        "type": "text",
        "id": "heading_text",
        "label": "Heading",
        "default": "Welcome to our shop"
      }, {
        "type": "checkbox",
        "id": "show_timer",
        "label": "Show Timer",
        "default": false
      }, {
        "type": "richtext",
        "id": "announcement_timer",
        "label": "Timer",
        "info": "Please provide hours + minutes to show timer"
      }, {
        "type": "richtext",
        "id": "announcement_text",
        "label": "Text"
      }
    ],
    "presets": [
      {
        "name": "t:sections.header.settings.header_announcement"
      }
    ]
  }
{% endschema %}