{% render 'announcement-bar', section: section %}
{% schema %}
  {
    "name": "t:sections.header.settings.header_announcement",
    "settings": [
      {
        "type": "text",
        "id": "heading_text",
        "label": "Heading",
        "default": "Welcome to our shop"
      },
      {
        "type": "checkbox",
        "id": "show_timer",
        "label": "Show Timer",
        "default": false
      },
      {
        "type": "header",
        "content": "Timer Details"
      },
      {
        "type": "text",
        "id": "timer_hours",
        "label": "Hours",
        "default": "2"
      }, {
        "type": "text",
        "id": "timer_minutes",
        "label": "Minutes",
        "default": "30"
      }, {
        "type": "richtext",
        "id": "announcement_text",
        "label": "Text"
      }
    ],
    "presets": [
      {
        "name": "t:sections.header.settings.header_announcement"
      }
    ]
  }
{% endschema %}