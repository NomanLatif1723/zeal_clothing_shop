<div class="main__section-{{ section.id }}">
  {%- unless section.settings.full_width -%}
    <div class="page__width">
  {%- endunless -%}
  {%- for block in section.blocks -%}
    {%- render block -%}
  {%- endfor -%}
  {%- unless section.settings.full_width -%}
    </div>
  {%- endunless -%}
</div>
{% schema %}
  {
    "name": "t:sections.apps.name",
    "settings": [
      {
        "type": "checkbox",
        "id": "full_width",
        "label": "t:sections.apps.settings.full_width.label",
        "default": false
      },
      {
        "type": "header",
        "content": "t:sections.apps.settings.header_spacing.label"
      },
      {
        "type": "range",
        "id": "margin_top",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "t:sections.apps.settings.header_spacing.top_spacing.label",
        "default": 16
      },
      {
        "type": "range",
        "id": "margin_bottom",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "t:sections.apps.settings.header_spacing.bottom_spacing.label",
        "default": 16
      }
    ],
    "blocks": [
      {
        "type": "@app"
      }
    ],
    "presets": [
      {
        "name": "t:sections.apps.presets.name"
      }
    ]
  }
{% endschema %}
