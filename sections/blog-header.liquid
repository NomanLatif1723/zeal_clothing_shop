{%- liquid
    assign header_text = section.settings.page_heading
    assign header_image = section.settings.page_image
    assign text_color = section.settings.text_color
    assign show_breadcrumbs = section.settings.show_breadcrumbs
    assign full_width = section.settings.full_width
    assign desktop_height = section.settings.section_height_desktop
    assign mobile_height = section.settings.section_height_mobile

    assign lazyloading = ''
    assign lazyloadImages = section.settings.lazyload_images
    if lazyloadImages
    assign lazyloading = 'lazy'
    endif

    assign ratio = 0.75
    assign default = 'grande'
    assign sizes = '(min-width: 1200px) 650px, 45vw'
-%}
{%- style -%}
  .main__section-{{ section.id }} .blog-header__text-content {
    color: {{ text_color }};
  }
  .main__section-{{ section.id }} .blog-breadcrumb__list a {
    color: {{ text_color }};
  }
{%- endstyle -%}
<div class="page-header main__section-{{ section.id }}">
  {%- if full_width -%}
  <div class="page__width">
  {%- endif -%}
    <div class="page-header__wrapper" data-desktop-height="{{ desktop_height }}" data-mobile-height="{{ mobile_height }}">
      <div class="page-header__image-container">
        {%- if header_image != blank -%}
          <img
            src="{{ header_image | img_url: default }}"
            srcset="
              {{ header_image | img_url: 'medium' }} {% if ratio < 1 %}{{ 240 | times: ratio | round }}{% else %}240{% endif %}w,
              {{ header_image | img_url: 'large' }} {% if ratio < 1 %}{{ 480 | times: ratio | round }}{% else %}480{% endif %}w,
              {{ header_image | img_url: 'grande' }} {% if ratio < 1 %}{{ 600 | times: ratio | round }}{% else %}600{% endif %}w,
              {{ header_image | img_url: '1024x1024' }} {% if ratio < 1 %}{{ 1024 | times: ratio | round }}{% else %}1024{% endif %}w,
              {{ header_image | img_url: '2048x2048' }} {% if ratio < 1 %}{{ 2048 | times: ratio | round }}{% else %}2048{% endif %}w
              "
            width="{{ header_image.width }}"
            height="{{ header_image.height }}"
            loading="{{ lazyloading }}"
            sizes="{{ sizes }}"
            alt="{{ header_image.alt }}" />
        {%- else -%}
          {{ 'lifestyle-1' | placeholder_svg_tag: "placeholder__image" }}
        {%- endif -%}
      </div>
      <div class="page-header__text-container">
        <div class="page-header__text-shadow">
          <div class="page-header__text-content">
            {%- if header_text != blank -%}
              <h1>{{ header_text }}</h1>
            {%- else -%}
              <h1>{{ blog.title }}</h1>
            {%- endif -%}
            {%- if show_breadcrumbs -%}
              <nav role="navigation" aria-label="breadcrumb">
                <ul class="breadcrumb__list page-breadcrumb__list">
                    <li class="breadcrumb__item">
                        <a href="{{ routes.root_url }}" title="Home">{{ 'general.breadcrumbs.home' | t }}</a>
                    </li>
                    <span class="separater__icon">{% render 'icon-arrow-down' %}</span>
                    <li class="breadcrumb__item" aria-current="page">
                      {%- if template.name == 'blog' -%}
                        <span>{{ blog.title }}</span>
                      {%- else -%}
                        <span>{{ page.title }}</span>
                      {%- endif -%}
                    </li>
                </ul>
              </nav>
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  {%- if full_width -%}
  </div>
  {%- endif -%}
</div>
{% schema %}
  {
    "name": "t:sections.blog-header.name",
    "class": "page__header",
    "settings": [
      {
        "type": "select",
        "id": "section_height_desktop",
        "label": "t:sections.blog-header.settings.section_height_desktop.label",
        "options": [
          {
            "value": "natural",
            "label": "t:sections.blog-header.settings.section_height_desktop.options.natural.label"
          },
          {
            "value": "compact",
            "label": "t:sections.blog-header.settings.section_height_desktop.options.compact.label"
          },
          {
            "value": "standard",
            "label": "t:sections.blog-header.settings.section_height_desktop.options.standard.label"
          },
          {
            "value": "extended",
            "label": "t:sections.blog-header.settings.section_height_desktop.options.extended.label"
          }
        ],
        "default": "natural"
      },
      {
        "type": "select",
        "id": "section_height_mobile",
        "label": "t:sections.blog-header.settings.section_height_mobile.label",
        "options": [
          {
            "value": "auto",
            "label": "t:sections.blog-header.settings.section_height_mobile.options.auto.label"
          },
          {
            "value": "compact",
            "label": "t:sections.blog-header.settings.section_height_mobile.options.compact.label"
          },
          {
            "value": "standard",
            "label": "t:sections.blog-header.settings.section_height_mobile.options.standard.label"
          },
          {
            "value": "extended",
            "label": "t:sections.blog-header.settings.section_height_mobile.options.extended.label"
          }
        ],
        "default": "auto"
      },
      {
        "type": "checkbox",
        "id": "full_width",
        "label": "t:sections.blog-header.settings.full_width.label"
      },
      {
        "type": "image_picker",
        "id": "page_image",
        "label": "t:sections.blog-header.settings.blog_image.label"
      },
      {
        "type": "text",
        "id": "page_heading",
        "label": "t:sections.blog-header.settings.blog_heading.label"
      },
      {
        "type": "checkbox",
        "id": "show_breadcrumbs",
        "label": "t:sections.blog-header.settings.show_breadcrumbs.label"
      },
      {
        "type": "checkbox",
        "id": "lazyload_images",
        "label": "t:sections.blog-header.settings.lazyload_images.label",
        "default": false
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "t:sections.blog-header.settings.text_color.label",
        "default": "#ffffff"
      }
    ],
    "presets": [
      {
        "name": "t:sections.blog-header.presets.name"
      }
    ],
    "disabled_on": {
      "groups": ["header", "footer", "aside"]
    }
  }
{% endschema %}
