{% schema %}
  {
    "name": "Blog Header",
    "class": "blog__header",
    "settings": [
      {
        "type": "image_picker",
        "id": "blog_image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "blog_heading",
        "label": "Heading"
      },
      {
        "type": "checkbox",
        "id": "show_breadcrumbs",
        "label": "Show Breadcrumbs"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text",
        "default": "#ffffff"
      },
      {
        "type": "checkbox",
        "id": "lazyload_images",
        "label": "t:sections.contact-header.settings.lazyload_images.label",
        "default": false
      }
    ]
  }
{% endschema %}
