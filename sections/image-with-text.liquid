{% stylesheet %}
.image-with-text-container {
  display: flex;
  align-items: center;
}

.text-block {
  flex: 1;
  padding: 10px;
  box-sizing: border-box;
}
{% endstylesheet %}

<div class="image-with-text-container">
  {% for block in section.blocks %}
    {% if forloop.index == 1 %}
      <div class="text-block">
        <p>{{ block.settings.text_content }}</p>
      </div>
      <div class="image-container">
        <img src="{{ section.settings.image_section | img_url }}" alt="">
      </div>
    {% else %}
      <div class="text-block">
        <p>{{ block.settings.text_content }}</p>
      </div>
    {% endif %}
  {% endfor %}
</div>
{% schema %}
{
  "name": "Image with Text Blocks",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_section",
      "label": "Image"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Text Content",
      "settings": [
        {
          "type": "text",
          "id": "text_content",
          "label": "Text Content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image with Text"
    }
  ]
}
{% endschema %}


