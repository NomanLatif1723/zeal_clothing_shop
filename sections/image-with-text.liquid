{% stylesheet %}
.image-with-text-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
}

.image-container {
  flex: 0 0 50%;
  max-width: 50%;
  padding: 10px;
  box-sizing: border-box;
}

.text-container {
  flex: 0 0 50%;
  max-width: 50%;
  padding: 10px;
  box-sizing: border-box;
}
{% endstylesheet %}

<div class="image-with-text-container">
  <div class="text-container">
    {% for block in section.blocks %}
      <p>{{ block.settings.text_content }}</p>
    {% endfor %}
  </div>

  <div class="image-container">
    <img src="{{ section.settings.image_section | img_url }}" alt="">
  </div>
</div>
{% schema %}
{
  "name": "Image with Text Blocks",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_section",
      "label": "Image"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Text Content",
      "settings": [
        {
          "type": "text",
          "id": "text_content",
          "label": "Text Content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image with Text"
    }
  ]
}
{% endschema %}


