{%- liquid
  assign image_size = section.settings.post_image_size
  assign show_date = section.settings.show_date
  assign show_tags = section.settings.show_tags
  
  assign lazyloading = ''
  assign lazyloadImages = section.settings.lazyload_images
  if lazyloadImages
  assign lazyloading = 'lazy'
  endif
  
  assign selectedImageSize = image_size
  assign imageAspectRatio = "0"
  case selectedImageSize
  when 'natural'
  assign imageAspectRatio = "0"
  when 'square'
  assign imageAspectRatio = "1/1"
  when 'portrait'
  assign imageAspectRatio = "2/3"
  when 'landscape'
  assign imageAspectRatio = "4/3"
  when 'wide'
  assign imageAspectRatio = "16/9"
  endcase
-%}
{%- style -%}
  .main__section-{{ section.id }}{
    margin-top: {{ section.settings.margin_top | times: 0.5 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.5 | round: 0 }}px;
  }
  @media only screen and (min-width: 769px) {
    .main__section-{{ section.id }}{
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="grid blog__grid">
  {% for article in blog.articles %}
    {%- render 'article-item' 
      , article: article,
      blog: blog,
      imageAspectRatio: imageAspectRatio,
      show_date: show_date,
      show_tags: show_tags,
      lazyloading: lazyloading -%}
  {% endfor %}
</div>
{% schema %}
  {
    "name": "Blogs",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_date",
        "label": "t:sections.blog-posts.settings.blog_show_date.label",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "show_tags",
        "label": "t:sections.blog-posts.settings.blog_show_tags.label",
        "default": false
      },
      {
        "type": "select",
        "id": "post_image_size",
        "label": "t:sections.blog-posts.settings.blog_image_size.label",
        "options": [
          {
            "value": "natural",
            "label": "t:sections.blog-posts.settings.blog_image_size.options.natural.label"
          },
          {
            "value": "square",
            "label": "t:sections.blog-posts.settings.blog_image_size.options.square.label"
          },
          {
            "value": "portrait",
            "label": "t:sections.blog-posts.settings.blog_image_size.options.portrait.label"
          },
          {
            "value": "landscape",
            "label": "t:sections.blog-posts.settings.blog_image_size.options.landscape.label"
          }, {
            "value": "wide",
            "label": "t:sections.blog-posts.settings.blog_image_size.options.wide.label"
          }
        ]
      },
      {
        "type": "checkbox",
        "id": "lazyload_images",
        "label": "t:sections.blog-posts.settings.lazyload_images.label",
        "default": false,
        "info": "t:sections.blog-posts.settings.lazyload_images.info"
      }, {
        "type": "header",
        "content": "t:sections.blog-posts.settings.header_spacing.label"
      }, {
        "type": "range",
        "id": "margin_top",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "t:sections.blog-posts.settings.header_spacing.top_spacing.label",
        "default": 16
      }, {
        "type": "range",
        "id": "margin_bottom",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "t:sections.blog-posts.settings.header_spacing.bottom_spacing.label",
        "default": 16
      }
    ]
  }
{% endschema %}