{{ 'cart.css' | asset_url | stylesheet_tag }}
{%- liquid
   assign free_shipping = false
   if settings.is_free_shipping_bar and settings.free_shipping_threshold != ''
     assign free_shipping = true
     assign threshold_total = settings.free_shipping_threshold | times: 100
     assign threshold = threshold_total | money
   endif
-%}
{% style %}
  :root {
    --progress: 1;
  }
{% endstyle %}
<div class="main-cart__wrapper">
  <div class="page__width">
    <div class="cart__header text__align-{{ section.settings.text_alignment }}">
      <div class="main__heading cart__main-heading"><h2>{{ 'cart.general.title' | t }}</h2></div>
      {%- if free_shipping and cart.item_count > 0 -%}
        <div class="free-shipping">
          <div class="rte">
            {%- if cart.total_price < threshold_total -%}
              <p>{{ 'cart.general.free_shipping_eligible'| t }}{{ shop.currency_symbol }}{{ threshold_total | minus: cart.total_price | money }}</p>
            {%- else -%}
             <p>{{ 'cart.general.free_shipping_success_html' | t: ammount: threshold }}</p>
            {%- endif -%}
          </div>
          <div class="free-shipping__bar" style="--progress: {{ cart.total_price | times: 1.0 | divided_by: threshold_total | at_most: 1 }}"></div>
        </div>
      {%- endif -%}
    </div>
    {%- if cart.item_count > 0 -%}
      {%- form 'cart', cart -%}
        <div class="cart__main">
          <div class="cart__items">    
            {%- for item in cart.items -%}
              <div class="cart__item-title desktop__hidden">
                <h3>{{ item.title }}</h3>
                <a href="{{ item.url_to_remove }}" class="cart__item-remove" title="{{ 'cart.general.remove' | t }}">
                  <svg width="12" height="14" viewBox="0 0 12 14" fill="none">
                    <path d="M10.375 3.66667L9.83292 11.7617C9.7862 12.4594 9.2419 13 8.5861 13H3.4139C2.7581 13 2.2138 12.4594 2.16708 11.7617L1.625 3.66667M4.75 6.33333V10.3333M7.25 6.33333V10.3333M7.875 3.66667V1.66667C7.875 1.29848 7.59518 1 7.25 1H4.75C4.40482 1 4.125 1.29848 4.125 1.66667V3.66667M1 3.66667H11" stroke="#9D1339" stroke-width="1.1" stroke-linecap="round" stroke-linejoin="round"></path>
                  </svg>
                  {{ 'cart.general.remove' | t }}
                </a>
              </div>
              <div class="cart__item-block">
                  <div class="cart__item-image">
                  <a href="{{ item.url }}">
                    <img class="mobile__hidden" src="{{ item.image | image_url: width: 100, height: 100 }}" alt="{{ item.image.alt }}" width="100" height="100" loading="lazy" />
                    <img class="desktop__hidden" src="{{ item.image | image_url: width: 80, height: 80 }}" alt="{{ item.image.alt }}" width="80" height="80" loading="lazy" />
                  </a>  
                  </div>
                  <div class="cart__item-content">
                    {%- if section.settings.show_vendor -%}
                      <div class="grid-product__vendor">{{ item.product.vendor }}</div>
                    {%- endif -%}
                    <div class="cart__item-title mobile__hidden">
                      <h3>{{ item.product.title }}</h3>
                      <a href="{{ item.url_to_remove }}" class="cart__item-remove" title="{{ 'cart.general.remove' | t }}">
                        <svg width="12" height="14" viewBox="0 0 12 14" fill="none">
                          <path d="M10.375 3.66667L9.83292 11.7617C9.7862 12.4594 9.2419 13 8.5861 13H3.4139C2.7581 13 2.2138 12.4594 2.16708 11.7617L1.625 3.66667M4.75 6.33333V10.3333M7.25 6.33333V10.3333M7.875 3.66667V1.66667C7.875 1.29848 7.59518 1 7.25 1H4.75C4.40482 1 4.125 1.29848 4.125 1.66667V3.66667M1 3.66667H11" stroke="#9D1339" stroke-width="1.1" stroke-linecap="round" stroke-linejoin="round"></path>
                        </svg>
                        {{ 'cart.general.remove' | t }}
                      </a>
                    </div>
                    <div class="cart__item-price">
                      <div class="line__item-price">{{ item.original_price | money }}</div>
                      {%- unless item.product.has_only_default_variant -%}
                        <div class="line__item-variants">
                          {%- for option in item.options_with_values -%}
                            <div>{{ option.value }}</div>
                          {%- endfor -%}
                        </div>
                      {%- endunless -%}
                      {%- if product.selling_plan_allocation != empty -%}
                        <div class="cart__item-variants">
                          {{ product.selling_plan_allocation.selling_plan.name }}
                        </div>
                      {%- endif -%}
                      {%- unless item.properties == empty -%}
                        {%- for property in item.properties -%}
                          <div class="cart__item-property">
                            {{ property.first }}:
                            {%- if property.last contains '/uploads/' -%}
                              <a href="{{ property.last }}">{{ property.last | split: '/' | last }}</a>
                            {%- else -%}
                              {{ property.last }}
                            {%- endif -%}
                          </div>
                        {%- endfor -%}
                      {%- endunless -%}
                    </div>
                    <div class="cart-quantity__wrapper">
                      <div class="line__item-quantity">
                        {% comment %}
                          <input name="updates[]" value="{{ item.quantity }}" />
                        {% endcomment %}
                        <button aria-label="{{ 'cart.general.minus' | t }}" class="icon__minus">
                           <svg xmlns="http://www.w3.org/2000/svg" width="10" height="2" viewBox="0 0 10 2" fill="none">
                            <path d="M9 1H1" stroke="currentcolor" stroke-width="1.5" stroke-linecap="square" stroke-linejoin="round"/>
                          </svg>
                        </button>
                        <input name="updates[]" id="qty-cart" value="{{ item.quantity }}" readonly="">
                        <button aria-label="{{ 'cart.general.plus' | t }}" class="icon__plus">
                          <svg xmlns="http://www.w3.org/2000/svg" width="10" height="10" viewBox="0 0 10 10" fill="none">
                            <path d="M5 1V5M5 5V9M5 5H9M5 5L1 5" stroke="currentcolor" stroke-width="1.5" stroke-linecap="square" stroke-linejoin="round"/>
                          </svg>
                        </button>
                      </div>
                      <div class="line__item-final--price rte">
                        {{ 'cart.general.final_line_price' | t }}<strong>{{ item.final_line_price | money }}</strong>
                      </div>
                    </div>
                  </div>
              </div>
            {%- endfor -%}
            <div class="cart-btn__container">
              {%- if settings.show_note -%}
                <button id="cartNoteBtn" class="btn__link form__links" class="btn__cart-note" aria-label="{{ 'cart.general.add_note' | t }}">{{ 'cart.general.add_note' | t }}</button>
              {%- endif -%}
              <a href="{{ routes.all_products_collection_url }}" title="{{ 'cart.general.continue_shopping' | t }}" class="btn__link form__links">{{ 'cart.general.continue_shopping' | t }}</a>
            </div>
            {%- if settings.show_note -%}
              <div class="cart__note hidden">
                <label class="form__label" for="CartNote">{{ 'cart.general.note' | t }}</label>
                <textarea name="note" rows="10" class="form__input" id="CartNote" placeholder="{{ 'cart.general.note_placeholder' | t }}">{{ cart.note }}</textarea>
              </div>
            {%- endif -%}
            {%- if cart.cart_level_discount_applications != blank -%}
              <div class="cart__discounts">
                <h3>{{ 'cart.general.discount' | t }}</h3>
              {%- for cart__discount in cart.cart_level_discount_applications -%}
                {{ cart__discount.title }} - {{ cart__discount.total_allocated_amount }}
              {%- endfor -%}
              </div>
            {%- endif -%}
            
          </div>
          <div class="cart__summary">
            <h3>{{ 'cart.general.summary' | t }}</h3>
            <div class="cart__total-price">
              <div>{{ 'cart.general.total' | t }}</div>
              <div>{{ cart.total_price | money }}</div>
            </div>
            <div class="cart__shipping-text">
              <h4>{{ 'cart.general.shipping' | t }}</h4>
              <div class="rte">{{ 'cart.general.shipping_text' | t }}</div>
            </div>
            {%- if settings.show_terms -%}
              <div class="cart__terms-checkbox">
                <input type="checkbox" id="cartTerms">
                <label for="cartTerms">{{ 'cart.general.terms_at_checkout' | t }}</label>
              </div>
            {%- endif -%}
            <div class="cart__checkout-wrapper">
              <button class="btn btn__link btn__primary" type="submit" name="checkout" value="Checkout" aria-label="{{ 'cart.general.checkout' | t }}">{{ 'cart.general.checkout' | t }}</button>
              {% if settings.additional_checkout_buttons %}
                <div class="additional__buttons">{{ content_for_additional_checkout_buttons }}</div>
              {% endif %}
            </div>
          </div>
        </div>
      {%- endform -%}
    {%- else -%}
    <div class="cart__empty-message">
      <div class="rte">{{ 'cart.general.empty_cart' | t }}</div>
      <a href="{{ routes.all_products_collection_url }}" title="{{ 'cart.general.continue_shopping' | t }}" class="form__links">{{ 'cart.general.continue_shopping' | t }}</a>
    </div>
    {%- endif -%}
  </div>
</div>
{% schema %}
  {
    "name": "t:sections.main-cart.name",
    "class": "main__cart",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_vendor",
        "label": "t:sections.main-cart.settings.show_vendor.label",
        "default": false
      },
      {
        "type": "header",
        "content": "t:sections.main-cart.settings.header_alignment.label"
      },
      {
        "type": "select",
        "id": "text_alignment",
        "label": "t:sections.main-cart.settings.header_alignment.alignment.label",
        "options": [
          {
            "value": "left",
            "label": "t:sections.main-cart.settings.header_alignment.alignment.options.left.label"
          }, {
            "value": "center",
            "label": "t:sections.main-cart.settings.header_alignment.alignment.options.center.label"
          }, {
            "value": "right",
            "label": "t:sections.main-cart.settings.header_alignment.alignment.options.right.label"
          }
        ],
        "default": "left"
      }
    ]
  }
{% endschema %}