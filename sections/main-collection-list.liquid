{%- liquid
    assign main_heading = section.settings.heading
    assign collection_per_row = section.settings.collection_per_row
    assign show_all_collections = section.settings.all_collections
    assign products_count = section.settings.products_count
    assign textAlignment = section.settings.text_alignment
    assign swipe_on_mobile = section.settings.swipe_on_mobile
    assign collection_layout = section.settings.collection_layout
    assign lazyloading = ''
    assign lazyloadImages = section.settings.lazyload_images
    if lazyloadImages
    assign lazyloading = 'lazy'
    endif

    assign selectedImageSize = settings.collection_image_size
    assign imageAspectRatio = "0"
    case selectedImageSize
    when 'square'
    assign imageAspectRatio = "1/1"
    when 'portrait'
    assign imageAspectRatio = "2/3"
    when 'landscape'
    assign imageAspectRatio = "4/3"
    endcase

    case collection_per_row
    when 1
    assign itemWidth = ''
    when 2 
    assign itemWidth = 'block__item--half'
    when 3
    assign itemWidth = 'block__item--auto block__item--one-third'
    when 4
    assign itemWidth = 'block__item--auto block__item--one-fourth'
    when 5
    assign itemWidth = 'block__item--auto block__item--one-fifth'
    endcase
-%}
{%- style -%}
  .main__section-{{ section.id }}{
    margin-top: {{ section.settings.margin_top | times: 0.5 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.5 | round: 0 }}px;
  }
  @media only screen and (min-width: 769px) {
    .main__section-{{ section.id }}{
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }
{%- endstyle -%}
<section class="collection-list__wrapper main__section-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="page__width">
    <div class="collection-list">
      <header class="collection-list__header">
        <div class="main__heading collection-list__heading text__align-{{ textAlignment }}">
          <h2>{{ main_heading }}</h2>
        </div>
      </header>
      {%- if collection_layout == 'slider' -%}
        <div class="slider__arrows-container collection-list__arrows">
          <div class="swiper-button-next swiper-button-{{ section.id }}"></div>
          <div class="swiper-button-prev swiper-button-{{ section.id }}"></div>
        </div>
      {%- endif -%}
      {%- if collection_layout == 'slider' -%}
        <div id="collectionListSlider-{{ section.id }}" class="collection-list__slider swiper">
        {%- endif -%}
        <collection-list class="collection-grid__list collection-grid{% if collection_layout == 'slider' %} swiper-wrapper{% endif %}{% if swipe_on_mobile and collection_layout == 'grid' %} collection-grid__scroll{% endif %}">
          {%- if show_all_collections -%}
            {% for collection in collections %}
              {% render 'collection-list-all', 
               collection: collection,
               textAlignment: textAlignment,
               itemWidth: itemWidth,
               imageAspectRatio: imageAspectRatio,
               products_count: products_count,
               lazyloading: lazyloading,
               collection_layout: collection_layout,
               swipe_on_mobile: swipe_on_mobile %}
            {% endfor %}
          {%- else -%}
            {%- for block in section.blocks -%}
              {%- if collections[block.settings.collection] == blank -%}
                <collection-item class="collection-grid__item {{ itemWidth }} {% if collection_layout == 'slider' %} swiper-slide{% endif %}{% if swipe_on_mobile and collection_layout == 'grid' %} collection-item__scroll{% endif %}" {{ block.shopify_attributes }}>
                  <div class="collection-grid__content">
                    {%- capture count -%}
                      {%- cycle 1, 2, 3, 4, 5, 6 -%}
                    {%- endcapture -%}
                    <div class="collection-grid__image " style="aspect-ratio: {{ imageAspectRatio }};">
                      {{ 'collection-' | append: count | placeholder_svg_tag: "placeholder__image" }}
                      {%- if settings.overlay_style == false -%}
                        <div class="overlay-box__container text__align-{{ textAlignment }}">
                          <div class="collection-grid__text">
                            <div class="collection-grid__title">
                              <h4>{{ 'collection-list.general.title' | t }}</h4>
                            </div>
                          </div>
                        </div>
                      {%- endif -%}
                    </div>
                    {%- if settings.overlay_style -%}
                      <div class="collection-grid__text text__align-{{ textAlignment }}">
                        <div class="collection-grid__title">
                          <h4>{{ 'collection-list.general.title' | t }}</h4>
                        </div>
                      </div>
                    {%- endif -%}
                  </div>
                </collection-item>
              {%- else -%}
                {%- render 'collection-item', 
                  collection: collections[block.settings.collection],
                  collection_heading: block.settings.collection_heading,
                  lazyloading: lazyloading,
                  products_count: products_count,
                  textAlignment: textAlignment,
                  itemWidth: itemWidth,
                  imageAspectRatio: imageAspectRatio,
                  collection_layout: collection_layout,
                  swipe_on_mobile: swipe_on_mobile -%}
              {%- endif -%}
            {%- endfor -%}
          {%- endif -%}
        </collection-list>
        <div class="swiper-pagination swiper-pagination-{{ section.id }}"></div>
        {%- if collection_layout == 'slider' -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "t:sections.main-collection-list.name",
    "class": "main__section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "t:sections.main-collection-list.settings.heading.label",
        "default": "Collection List"
      },
      {
        "type": "range",
        "id": "collection_per_row",
        "label": "t:sections.main-collection-list.settings.collection_per_row.label",
        "default": 4,
        "min": 1,
        "max": 5,
        "step": 1
      },
      {
        "type": "checkbox",
        "id": "all_collections",
        "label": "t:sections.main-collection-list.settings.all_collections.label",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "swipe_on_mobile",
        "label": "t:sections.main-collection-list.settings.swipe_on_mobile.label",
        "default": false
      }, 
      {
        "type": "checkbox",
        "id": "products_count",
        "label": "t:sections.main-collection-list.settings.products_count.label",
        "default": true
      },
      {
        "type": "select",
        "id": "text_alignment",
        "label": "t:sections.main-collection-list.settings.header_alignment.alignment.label",
        "options": [
          {
            "value": "left",
            "label": "t:sections.main-collection-list.settings.header_alignment.alignment.options.left.label"
          },
          {
            "value": "center",
            "label": "t:sections.main-collection-list.settings.header_alignment.alignment.options.center.label"
          },
          {
            "value": "right",
            "label": "t:sections.main-collection-list.settings.header_alignment.alignment.options.right.label"
          }
        ],
        "default": "center"
      },
      {
        "type": "select",
        "id": "collection_layout",
        "label": "t:sections.main-collection-list.settings.collection_layout.label",
        "default": "grid",
        "options": [
          {
            "value": "grid",
            "label": "t:sections.main-collection-list.settings.collection_layout.options.grid.label"
          },
          {
            "value": "slider",
            "label": "t:sections.main-collection-list.settings.collection_layout.options.slider.label"
          }
        ]
      },
      {
        "type": "checkbox",
        "id": "lazyload_images",
        "label": "t:sections.main-collection-list.settings.lazyload_images.label",
        "default": false,
        "info": "t:sections.main-collection-list.settings.lazyload_images.info"
      },
      {
        "type": "header",
        "content": "t:sections.main-collection-list.settings.header_spacing.label"
      },
      {
        "type": "range",
        "id": "margin_top",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "t:sections.main-collection-list.settings.header_spacing.top_spacing.label",
        "default": 16
      },
      {
        "type": "range",
        "id": "margin_bottom",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "t:sections.main-collection-list.settings.header_spacing.bottom_spacing.label",
        "default": 16
      }
    ],
    "blocks": [
      {
        "type": "collection",
        "name": "t:sections.main-collection-list.blocks.collection.name",
        "limit": 12,
        "settings": [
          {
            "type": "collection",
            "id": "collection",
            "label": "t:sections.main-collection-list.blocks.collection.settings.collection.label"
          }, {
            "type": "text",
            "id": "collection_heading",
            "label": "t:sections.main-collection-list.blocks.collection.settings.collection_heading.label",
            "default": "Collection Title"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "t:sections.main-collection-list.presets.name",
        "blocks": [
          {
            "type": "collection"
          },
          {
            "type": "collection"
          },
          {
            "type": "collection"
          },
          {
            "type": "collection"
          }
        ]
      }
    ],
    "disabled_on": {
      "groups": ["header","footer"]
    }
  }
{% endschema %}