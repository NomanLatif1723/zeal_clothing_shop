<div class="scroll__animate customer-account__wrapper">
  <div class="page__width">
    <div class="form__header account-form__header">
      <h4>{{ 'customers.account.title' | t }}</h4>
      <a class="logout__container" href="{{ routes.account_logout_url }}"title="{{ 'customers.logout.title' | t }}">
