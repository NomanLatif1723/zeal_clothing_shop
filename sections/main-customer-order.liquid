<div class="orders__wrapper main__section-{{ section.id }}">
  <div class="page__width"></div>
</div>
{% schema %}
  {
    "name": "t:sections.customer-order.name",
    "class": "main__section",
    "settings": [
      {
        "type": "header",
        "content": "t:sections.customer-order.settings.header_spacing.label"
      }, {
        "type": "range",
        "id": "margin_top",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "t:sections.customer-order.settings.header_spacing.top_spacing.label",
        "default": 16
      }, {
        "type": "range",
        "id": "margin_bottom",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "t:sections.customer-order.settings.header_spacing.bottom_spacing.label",
        "default": 16
      }
    ]
  }
{% endschema %}