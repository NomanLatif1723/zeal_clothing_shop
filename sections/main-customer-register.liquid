{%- style -%}
  .main__section-{{ section.id }}{
    margin-top: {{ section.settings.margin_top | times: 0.5 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.5 | round: 0 }}px;
  }
  @media only screen and (min-width: 769px) {
    .main__section-{{ section.id }}{
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="registration__wrapper main__section-{{ section.id }}">
  <div class="page__width">
    <div class="customer-form__container">
      <div id="registrationForm">
        <div class="form__header">
          <h4>{{ 'customers.register.title' | t }}</h4>
        </div>
        <div class="form__content">
          {%- form 'create_customer' -%}
            {{ form.errors | default_errors }}
            <div class="form__grid">
              <div class="form__group">
                <label for="first_name" class="form__label">{{ 'customers.register.first_name' | t }}</label>
                <input type="text" id="first_name" name="customer[first_name]" value="{%- if customer -%}{{ customer.first_name }}{%- endif -%}" class="form__input" required aria-label="{{ 'customers.register.first_name' | t }}">
              </div>
              <div class="form__group">
                <label for="last_name" class="form__label">{{ 'customers.register.last_name' | t }}</label>
                <input type="text" id="last_name" name="customer[last_name]" value="{%- if customer -%}{{ customer.last_name }}{%- endif -%}" class="form__input" required aria-label="{{ 'customers.register.last_name' | t }}">
              </div>
            </div>
            <div class="form__group">
              <label for="email" class="form__label">{{ 'customers.register.email' | t }}</label>
              <input type="email" id="email" name="customer[email]" value="{%- if customer -%}{{ customer.email }}{%- endif -%}" class="form__input" required aria-label="{{ 'customers.register.email' | t }}">
            </div>
            <div class="form__group password__group">
              <label for="password" class="form__label">{{ 'customers.register.password' | t }}</label>
              <input type="password" id="password" name="customer[password]" class="form__input" required value="">
              <span class="password__toggle-btn">{{ 'customers.register.show_password' | t }}</span>
            </div>
            <div class="form__submit">
              <button type="submit" class="btn btn__link btn__primary" aria-label="{{ 'customers.register.submit' | t }}">{{ 'customers.register.submit' | t }}</button>
            </div>
            <a class="form__link text__center" href="{{ routes.account_login_url }}" title="{{ 'customers.register.login_user' | t }}">{{ 'customers.register.login_user' | t }}</a>
            {%- assign additional_text = section.settings.additional_text -%}
            {%- if additional_text != blank -%}
              <div class="register-form__text rte">
                {{ additional_text }}
              </div>
            {%- endif -%}
          {%- endform -%}
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "t:sections.customer-registration.name",
    "class": "main__section",
    "settings": [
      {
        "type": "richtext",
        "id": "additional_text",
        "label": "t:sections.customer-registration.settings.additional_text.label"
      }, {
        "type": "header",
        "content": "t:sections.customer-registration.settings.header_spacing.label"
      }, {
        "type": "range",
        "id": "margin_top",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "t:sections.customer-registration.settings.header_spacing.top_spacing.label",
        "default": 16
      }, {
        "type": "range",
        "id": "margin_bottom",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "t:sections.customer-registration.settings.header_spacing.bottom_spacing.label",
        "default": 16
      }
    ]
  }
{% endschema %}