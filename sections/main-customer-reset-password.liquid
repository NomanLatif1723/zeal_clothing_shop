<div class="reset-password__wrapper">
  <div class="page__width">
    <div class="customer-form__container">
      <div id="resetPasswordForm">
        <div class="form__header">
          <h4>{{ 'customers.reset_password.title' | t }}</h4>
        </div>
        <div class="form__header_text rte">
          {{ 'customers.reset_password.sub_text' | t }}
        </div>
        <div class="form__content">
          {% form 'reset_customer_password' %}
            {{ form.errors | default_errors }}
            <div class="form__group password__group">
              <label for="password" class="form__label">{{ 'customers.reset_password.password' | t }}</label>
              <input type="password" id="password" name="customer[password]" class="form__input" required>
              <span class="password__toggle-btn password__show-btn">{{ 'customers.reset_password.show_password' | t }}</span>
              <span class="password__toggle-btn password__hide-btn hidden">{{ 'customers.reset_password.hide_password' | t }}</span>
            </div>
            <div class="form__group password__group">
              <label for="confirm_password" class="form__label">{{ 'customers.reset_password.confirm_password' | t }}</label>
              <input type="password" id="confirm_password" name="customer[password_confirmation]" class="form__input" required>
              <span class="password__toggle-btn password__show-btn">{{ 'customers.reset_password.show_password' | t }}</span>
              <span class="password__toggle-btn password__hide-btn hidden">{{ 'customers.reset_password.hide_password' | t }}</span>
            </div>
            <div class="form__submit">
              <button class="btn btn__link btn__primary" aria-label="{{ 'customers.reset_password.submit' | t }}">{{ 'customers.reset_password.submit' | t }}</button>
            </div>
            <div class="text__center">
              <a class="form__links" href="{{ routes.account_login_url }}" title="{{ 'customers.reset_password.cancel' | t }}">{{ 'customers.reset_password.cancel' | t }}</a>
            </div>
          {% endform %}
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "t:sections.customer-reset_password.name",
    "class": "customer__forms"
  }
{% endschema %}