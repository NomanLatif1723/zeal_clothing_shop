{%- style -%}
  .main__section-{{ section.id }}{
    margin-top: {{ section.settings.margin_top | times: 0.5 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.5 | round: 0 }}px;
  }
  @media only screen and (min-width: 769px) {
    .main__section-{{ section.id }}{
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="reset-password__wrapper main__section-{{ section.id }}">
  <div class="page__width">
    <div class="customer-form__container">
      <div id="resetPasswordForm">
        <div class="form__header">
          <h4>{{ 'customers.reset_password.title' | t }}</h4>
        </div>
        <div class="form__header_text rte">
          {{ 'customers.reset_password.sub_text' | t }}
        </div>
        <div class="form__content">
          {% form 'reset_customer_password' %}
            {{ form.errors | default_errors }}
            <div class="form__group password__group">
              <label for="password" class="form__label">{{ 'customers.reset_password.password' | t }}</label>
              <input type="password" id="password" name="customer[password]" class="form__input" required value="">
              <span class="password__toggle-btn">{{ 'customers.reset_password.show_password' | t }}</span>
            </div>
            <div class="form__group password__group">
              <label for="confirm_password" class="form__label">{{ 'customers.reset_password.confirm_password' | t }}</label>
              <input type="password" id="confirm_password" name="customer[password_confirmation]" class="form__input" required value="">
              <span class="password__toggle-btn">{{ 'customers.reset_password.show_password' | t }}</span>
            </div>
            <div class="form__submit">
              <button class="btn btn__link btn__primary" aria-label="{{ 'customers.reset_password.submit' | t }}">{{ 'customers.reset_password.submit' | t }}</button>
            </div>
            <div class="text__center">
              <a class="form__links" href="{{ routes.account_login_url }}" title="{{ 'customers.reset_password.cancel' | t }}">{{ 'customers.reset_password.cancel' | t }}</a>
            </div>
          {% endform %}
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "t:sections.customer-reset_password.name",
    "class": "main__section",
    "settings": [
      {
        "type": "header",
        "content": "t:sections.customer-reset_password.settings.header_spacing.label"
      }, {
        "type": "range",
        "id": "margin_top",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "t:sections.customer-reset_password.settings.header_spacing.top_spacing.label",
        "default": 16
      }, {
        "type": "range",
        "id": "margin_bottom",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "t:sections.customer-reset_password.settings.header_spacing.bottom_spacing.label",
        "default": 16
      }
    ]
  }
{% endschema %}