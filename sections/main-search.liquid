{%- liquid
  assign show_filtering =  section.settings.show_filtering
  assign show_sorting =  section.settings.show_sorting
  assign show_collection_count = section.settings.show_collection_count
  assign show_breadcrumbs = settings.show_breadcrumbs
  assign textAlignment = section.settings.text_alignment 
  assign results_per_row = section.settings.results_per_row
  assign results_to_show = section.settings.results_to_show
  case results_per_row   
  when 1
    assign itemWidth = ''
  when 2
    assign itemWidth = 'block__item--half'
  when 3
    assign itemWidth = 'block__item--auto block__item--one-third'
  when 4
    assign itemWidth = 'block__item--auto block__item--one-fourth'
  when 5
    assign itemWidth = 'block__item--auto block__item--one-fifth'
  endcase

  assign lazyloading = ''
  assign lazyloadImages = section.settings.lazyload_images
  if lazyloadImages
    assign lazyloading = 'lazy'
  endif

  assign filter_drawer_position = 'left'
  assign textDirection = settings.text_direction
  if textDirection == 'rtl'
    assign filter_drawer_position = 'right'
  endif
  
-%}
{%- style -%}
  .main__section-{{ section.id }}{
    margin-top: {{ section.settings.margin_top | times: 0.5 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.5 | round: 0 }}px;
  }
  @media only screen and (min-width: 769px) {
    .main__section-{{ section.id }}{
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="main-section__wrapper main__section-{{ section.id }}">
  <div class="page__width">
    <div class="search__form">
      <form class="search-form__flex" action="{{ routes.search_url }}">
        <input class="form__input" type="text"
          placeholder="Search"
          name="q"
          value="{{ search.terms | escape }}"
       >
        <button class="btn btn__link rte" type="submit" aria-label="Search">Search</button>
      </form>
    </div>
    <div class="search__results">
        {% if search.results_count > 0 %}
          {% if search.results.object_type == 'product' %}
          <div class="catalog__wrapper">
            {%- if show_filtering -%}
              <div class="catalog-filter__block">
                <div class="drawer__overlay-container"></div>
                <div class="filter-drawer filter-drawer__{{ filter_drawer_position }}">
                  <div class="drawer__header filter-drawer__header">
                    <div class="drawer__title">{{ 'collections.general.filter_drawer' | t }}</div>
                    <button class="drawer-icon__close filter-icon__close">
                      {%- render 'icon-close' -%}
                    </button>
                  </div>
                  {% render 'filter-facets', filters: search.filters %}
                  <div class="drawer__header filter-drawer__header">
                    <div class="drawer__title">{{ 'collections.general.sort_drawer' | t }}</div>
                  </div>
                  {%- if show_sorting -%}
                    <div class="catalog-sorting__drawer filter-drawer__header">
                      <select id="sort-by">
                        {%- assign sort_by = search.sort_by | default: search.default_sort_by -%}
                        {%- for option in search.sort_options -%}
                          <option value="{{ option.value }}" {% if option.value == sort_by %}selected="selected"{% endif %}>
                            {{ option.name }}
                          </option>
                        {%- endfor -%}
                      </select>
                    </div>
                  {%- endif -%}
                </div>
              </div>
            {%- endif -%}
            <div class="{% if show_filtering %}catalog-list__banner{% endif %}">
              <div class="catalog__header">
                <div class="catalog-title__container">
                  <div class="main__heading catalog__heading">
                    <h2>{{ 'search.general.catalog' | t }}</h2>
                  </div>
                  {%- if show_breadcrumbs -%}
                    <nav role="navigation" aria-label="breadcrumb">
                      <ul class="breadcrumb__list">
                          <li class="breadcrumb__item">
                              <a href="{{ routes.root_url }}" title="Home">{{ 'general.breadcrumbs.home' | t }}</a>
                          </li>
                          <span class="separater__icon">{% render 'icon-arrow-down' %}</span>
                          <li class="breadcrumb__item" aria-current="page">
                              <span>{{ page_title }}</span>
                          </li>
                      </ul>
                    </nav>
                  {%- endif -%}
                </div>
                <div class="catalog-sorting__container">
                  {%- if show_collection_count -%}
                    <div class="catalog-product__count">
                      {{ 'collections.general.products_count' | t: products_count:search.results_count }}
                    </div>
                  {%- endif -%}
                  {%- if show_sorting -%}
                  <div class="catalog__sorting">
                    <select id="sort-by">
                      {%- assign sort_by = search.sort_by | default: search.default_sort_by -%}
                      {%- for option in search.sort_options -%}
                        <option value="{{ option.value }}" {% if option.value == sort_by %}selected="selected"{% endif %}>
                          {{ option.name }}
                        </option>
                      {%- endfor -%}
                    </select>
                  </div>
                  {%- endif -%}
                </div>
                <div class="catalog-sorting__btn">
                  <button class="filter__btn" aria-label="Filter/Sort">
                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="15" height="12" viewBox="0 0 15 12" fill="none">
                      <mask id="mask0_2385_1574" style="mask-type:alpha" maskUnits="userSpaceOnUse" x="0" y="0" width="15" height="12"><rect width="15" height="12" fill="url(#pattern0)"/></mask>
                      <g mask="url(#mask0_2385_1574)"><rect width="15" height="12" fill="#707070"/></g>
                      <defs><pattern id="pattern0" patternContentUnits="objectBoundingBox" width="1" height="1"><use xlink:href="#image0_2385_1574" transform="matrix(0.0017316 0 0 0.0021645 0.05671 0)"/></pattern>                
                        <image id="image0_2385_1574" width="512" height="462" xlink:href="data:image/png;base64,"/>
                      </defs>
                    </svg>
                    {{ 'collections.general.fiter_collection' | t }}
                  </button>
                </div>
              </div>
              {%- paginate search.results by results_to_show -%}
                <div class="collection-grid">
                  {%- for product in search.results limit: results_to_show -%}
                    {%- render 'product-item',
                      section: section,
                      textAlignment: textAlignment,
                      products_per_row: products_per_row,
                      product: product,
                      collection: search,
                      lazyloading: lazyloading,
                      itemWidth: itemWidth 
                    -%}
                  {%- endfor -%}
                </div>
                {%- if paginate.pages > 1 -%}
                  {%- render 'pagination',
                     paginate: paginate,
                     collection: search
                  -%}
                {%- endif -%}
              {%- endpaginate -%}
            </div>
          </div>
          {% endif %}               
        {% else %}
          <div class="search-no__results text__center">{{ 'search.general.no_results' | t }}</div>
        {% endif %}
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Search",
    "settings": [
      {
        "type": "range",
        "id": "results_to_show",
        "label": "t:sections.main-collection.settings.products_to_show.label",
        "min": 8,
        "max": 50,
        "default": 12,
        "step": 1
      },
      {
        "type": "range",
        "id": "results_per_row",
        "label": "t:sections.main-collection.settings.products_per_row.label",
        "min": 2,
        "max": 5,
        "default": 4,
        "step": 1
      },
      {
        "type": "header",
        "content": "t:sections.main-collection.settings.header_sorting.label"
      },
      {
        "type": "checkbox",
        "id": "show_sorting",
        "label": "t:sections.main-collection.settings.header_sorting.show_sorting.label",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "show_filtering",
        "label": "t:sections.main-collection.settings.header_sorting.show_filtering.label",
        "info": "t:sections.main-collection.settings.header_sorting.show_filtering.info",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "show_collection_count",
        "label": "t:sections.main-collection.settings.header_sorting.show_collection_count.label",
        "default": false
      },
      {
        "type": "header",
        "content": "t:sections.main-collection.settings.header_alignment.label"
      },
      {
        "type": "select",
        "id": "text_alignment",
        "label": "t:sections.main-collection.settings.header_alignment.alignment.label",
        "options": [
          {
            "value": "left",
            "label": "t:sections.main-collection.settings.header_alignment.alignment.options.left.label"
          }, {
            "value": "center",
            "label": "t:sections.main-collection.settings.header_alignment.alignment.options.center.label"
          }, {
            "value": "right",
            "label": "t:sections.main-collection.settings.header_alignment.alignment.options.right.label"
          }
        ],
        "default": "center"
      },
      {
        "type": "checkbox",
        "id": "lazyload_images",
        "label": "t:sections.main-collection.settings.lazyload_images.label",
        "default": false
      },
      {
        "type": "header",
        "content": "t:sections.main-collection.settings.header_spacing.label"
      },
      {
        "type": "range",
        "id": "margin_top",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "t:sections.main-collection.settings.header_spacing.top_spacing.label",
        "default": 16
      },
      {
        "type": "range",
        "id": "margin_bottom",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "t:sections.main-collection.settings.header_spacing.bottom_spacing.label",
        "default": 16
      }
    ]
  }
{% endschema %}