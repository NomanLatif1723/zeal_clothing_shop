{%- style -%}
  .main__section-{{ section.id }}{
    margin-top: {{ section.settings.margin_top | times: 0.5 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.5 | round: 0 }}px;
  }
  @media only screen and (min-width: 769px) {
    .main__section-{{ section.id }}{
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="main__section-{{ section.id }} store__locator-section" data-desktop-height="{{ section.settings.section_height_desktop }}" data-mobile-height="{{ section.settings.section_height_mobile }}">
  <div class="page__width">
    <div class="main__map-container">
      <div class="map__section-banner">
        {%- if section.settings.map_embed_code != blank -%}
          {{ section.settings.map_embed_code }}
        {%- else -%}
          {{ 'lifestyle-1' | placeholder_svg_tag: "placeholder__image" }}
        {%- endif -%}
      </div>
      <div class="map__section-text">
        <div class="map__section-box text__position-{{ section.settings.content_position }}">
          <div class="map__section-shadow text__align-{{ section.settings.text_alignment }}">
            {%- if section.settings.heading != blank -%}
              <h3 class="map__heading">{{ section.settings.heading }}</h3>
            {%- endif -%}
            {%- if section.settings.address != blank -%}
              <div class="map__address">{{ section.settings.address }}</div>
            {%- endif -%}
            {%- if section.settings.button_text != blank -%}
              <a href="{{ section.settings.button_link }}" class="btn btn__link view__map-btn" title="{{ section.settings.button_text }}">
                {{ section.settings.button_text }}
              </a>
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "t:sections.map.name",
    "settings": [
      {
        "type": "select",
        "id": "section_height_desktop",
        "label": "t:sections.map.settings.section_height_desktop.label",
        "options": [
          {
            "value": "natural",
            "label": "t:sections.map.settings.section_height_desktop.options.natural.label"
          },
          {
            "value": "compact",
            "label": "t:sections.map.settings.section_height_desktop.options.compact.label"
          },
          {
            "value": "standard",
            "label": "t:sections.map.settings.section_height_desktop.options.standard.label"
          },
          {
            "value": "extended",
            "label": "t:sections.map.settings.section_height_desktop.options.extended.label"
          }, {
            "value": "full",
            "label": "t:sections.map.settings.section_height_desktop.options.full.label"
          }
        ],
        "default": "natural"
      },
      {
        "type": "select",
        "id": "section_height_mobile",
        "label": "t:sections.map.settings.section_height_mobile.label",
        "options": [
          {
            "value": "auto",
            "label": "t:sections.map.settings.section_height_mobile.options.auto.label"
          },
          {
            "value": "compact",
            "label": "t:sections.map.settings.section_height_mobile.options.compact.label"
          },
          {
            "value": "standard",
            "label": "t:sections.map.settings.section_height_mobile.options.standard.label"
          },
          {
            "value": "extended",
            "label": "t:sections.map.settings.section_height_mobile.options.extended.label"
          }, {
            "value": "full",
            "label": "t:sections.map.settings.section_height_mobile.options.full.label"
          }
        ],
        "default": "auto"
      },
      {
        "type": "html",
        "id": "map_embed_code",
        "label": "t:sections.map.settings.map_embed_code.label"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "t:sections.map.settings.heading.label",
        "default": "Store Location"
      },
      {
        "type": "richtext",
        "id": "address",
        "label": "t:sections.map.settings.address.label",
        "default": "<p>301 Front St W<br>Toronto, Canada</p><p>Mon - Fri, 8:30am - 10:30pm<br>Saturday, 8:30am - 10:30pm<br>Sunday, 8:30am - 10:30pm</p>"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "t:sections.map.settings.button_text.label",
        "default": "View Map"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "t:sections.map.settings.button_link.label"
      },
      {
        "type": "header",
        "content": "t:sections.map.settings.header_alignment.label"
      },
      {
        "type": "select",
        "id": "content_position",
        "label": "t:sections.map.settings.content_position.label",
        "options": [
          {
            "value": "top-left",
            "label": "t:sections.map.settings.content_position.options.top_left.label"
          },
          {
            "value": "top-center",
            "label": "t:sections.map.settings.content_position.options.top_center.label"
          },
          {
            "value": "top-right",
            "label": "t:sections.map.settings.content_position.options.top_right.label"
          },
          {
            "value": "center-left",
            "label": "t:sections.map.settings.content_position.options.center_left.label"
          }, {
            "value": "center",
            "label": "t:sections.map.settings.content_position.options.center.label"
          }, {
            "value": "center-right",
            "label": "t:sections.map.settings.content_position.options.center_right.label"
          }, {
            "value": "bottom-left",
            "label": "t:sections.map.settings.content_position.options.bottom_left.label"
          }, {
            "value": "bottom-center",
            "label": "t:sections.map.settings.content_position.options.bottom_center.label"
          }, {
            "value": "bottom-right",
            "label": "t:sections.map.settings.content_position.options.bottom_right.label"
          }
        ],
        "default": "center-left"
      },
      {
        "type": "select",
        "id": "text_alignment",
        "label": "t:sections.map.blocks.slide.settings.alignment.label",
        "options": [
          {
            "value": "left",
            "label": "t:sections.map.settings.alignment.options.left.label"
          }, {
            "value": "center",
            "label": "t:sections.map.settings.alignment.options.center.label"
          }, {
            "value": "right",
            "label": "t:sections.map.settings.alignment.options.right.label"
          }
        ],
        "default": "left"
      },
      {
        "type": "header",
        "content": "t:sections.map.settings.header_spacing.label"
      },
      {
        "type": "range",
        "id": "margin_top",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "t:sections.map.settings.header_spacing.top_spacing.label",
        "default": 16
      },
      {
        "type": "range",
        "id": "margin_bottom",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "t:sections.map.settings.header_spacing.bottom_spacing.label",
        "default": 16
      }
    ],
    "presets": [
      {
        "name": "t:sections.map.presets.name"
      }
    ]
  }
{% endschema %}
