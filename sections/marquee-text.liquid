<div class="marquee-text">
  <div class="marquee-text__inner">
      {% style %}
        .marquee-text__item {
          background: #111111;
          background: {{ section.settings.marquee_background }};
        }
        .marquee-text__item h3 {
          font-size: {{ section.settings.marquee_text_size }}px;
          line-height: inherit;
        }
        --marquee_speed: {{ section.settings.marquee_text_speed }}s;
      {% endstyle %}
      {% if section.settings.marquee_text_link != blank %}
        <a href="{{ section.settings.marquee_text_link }}">
        {% endif %}
        <div class="marquee-text__item marquee-item-{{ section.id }} marquee-text-{{ section.settings.marquee_direction }}">
          <div class="marquee-text__slider">
            {% for i in (1..30) %}
              <h3><span>{{ section.settings.marquee_text }}</span></h3>
            {% endfor %}
          </div>
        </div>
        {% if section.settings.marquee_text_link != blank %}
        </a>
      {% endif %}
  </div>
</div>
<script>
      var copy = document.querySelector(".marquee-text__slider").cloneNode(true);
      document.querySelectorAll(".marquee-text__item").appendChild(copy);
    </script>
{% schema %}
  {
    "name": "t:sections.marquee-text.name",
    "class": "main__section",
    "settings": [
      {
            "type": "text",
            "id": "marquee_text",
            "label": "t:sections.marquee-text.settings.marquee_text.label",
            "default": "Marquee Text"
          },
          {
            "type": "url",
            "id": "marquee_text_link",
            "label": "t:sections.marquee-text.settings.marquee_text_link.label"
          },
          {
            "type": "range",
            "id": "marquee_text_size",
            "label": "t:sections.marquee-text.settings.marquee_text_size.label",
            "min": 16,
            "max": 100,
            "step": 2,
            "default": 18,
            "unit": "px"
          },
          {
            "type": "select",
            "id": "marquee_direction",
            "label": "t:sections.marquee-text.settings.marquee_text_direction.label",
            "options": [
              {
                "value": "left",
                "label": "t:sections.marquee-text.settings.marquee_text_direction.options.left.label"
              }, {
                "value": "right",
                "label": "t:sections.marquee-text.settings.marquee_text_direction.options.right.label"
              }
            ],
            "default": "left"
          }, {
            "type": "range",
            "id": "marquee_text_speed",
            "label": "t:sections.marquee-text.settings.marquee_text_speed.label",
            "min": 50,
            "max": 500,
            "step": 10,
            "default": 100,
            "unit": "s"
          }, {
            "type": "color",
            "id": "marquee_background",
            "label": "t:sections.marquee-text.settings.marquee_background_color.label",
            "default": "#111111"
          }
    ],
    "presets": [
      {
        "name": "t:sections.marquee-text.presets.name"
      }
    ],
    "disabled_on": {
      "groups": ["header", "footer"]
    }
  }
{% endschema %}