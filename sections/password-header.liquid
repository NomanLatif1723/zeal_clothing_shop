<header class="section__header password__header">
  <div class="page__width">
    <div class="header__wrapper">
      {%- liquid
        assign logo = section.settings.header_logo
        assign desktop_logo_width = section.settings.desktop_logo_width
        assign mobile_logo_width = section.settings.mobile_logo_width
      -%}
      {%- style -%}
      .header__logo{
        width: {{ mobile_logo_width }}px;
        flex: 0 0 {{ mobile_logo_width }}px;
      }
      .site__logo-image {
        width: {{ mobile_logo_width }}px;
      }
      @media only screen and (min-width: 769px) {
        .header__logo{
          width: {{ desktop_logo_width }}px;
          flex: 0 0 {{ desktop_logo_width }}px
        }
        .site__logo-image {
          width: {{ desktop_logo_width }}px;
        }
      }
    {%- endstyle -%}
    {%- capture header_logo -%}
        <h1 class="site__logo">
          <a href="{{ routes.root_url }}" title="{{ shop.name }}" aria-label="{{ shop.name }}">
            {% if logo != blank %}
              {{ logo | image_url: width: logo.width, height: logo.height | image_tag: class: "site__logo-image" }}
            {%- else -%}
              <span>{{ shop.name }}</span>
            {% endif %}
          </a>
        </h1>
    {%- endcapture -%}
      <div class="header__block header__logo">
        {{ header_logo }}
      </div>
      <div class="header__block">
        <a href="#LoginModal" class="js-modal-open-login-modal password-login">
          <span class="password__lock">
            <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-lock" viewBox="0 0 64 64"><defs><style>.a{fill:none;stroke:#000;stroke-width:2px}</style></defs><path class="a" d="M19.45 23.6v-3.2c0-7 5.89-11.75 12.55-11.75 7.21 0 12.55 5.49 12.55 11.75v3.2M10 23.6h44v31.75H10zM32 37.47v7.47"/><circle class="a" cx="32" cy="35.87" r="1.6"/></svg>
          </span>
          {{ 'password-page.general.password_link' | t }}
        </a>
      </div>
    </div>
  </div>
</header>
{% schema %}
  {
    "name": "t:sections.password-header.name",
    "settings": [
      {
        "type": "select",
        "id": "header_layout",
        "label": "Layout",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          }
        ],
        "default": "left"
      },
      {
        "type": "image_picker",
        "id": "header_logo",
        "label": "t:sections.header.blocks.logo.settings.header_logo.logo.label"
      }, 
      {
        "type": "range",
        "id": "desktop_logo_width",
        "label": "t:sections.header.blocks.logo.settings.header_logo.desktop_logo_width.label",
        "min": 50,
        "max": 350,
        "step": 10,
        "unit": "px",
        "default": 100
      }, 
      {
        "type": "range",
        "id": "mobile_logo_width",
        "label": "t:sections.header.blocks.logo.settings.header_logo.mobile_logo_width.label",
        "min": 20,
        "max": 200,
        "step": 10,
        "unit": "px",
        "default": 100
      }
    ]
  }
{% endschema %}