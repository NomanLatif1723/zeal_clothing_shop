{% style %}
  .main__section-{{ section.id }}{
    margin-top: 30px;
    margin-bottom: 30px;
  }

  @media only screen and (min-width:769px) {
    .main__section-{{ section.id }}{
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }
{% endstyle %}
<div class="promotional__wrapper main__section-{{ section.id }}">
  <div class="page__width">
    <div class="promotional-grid">
      {% for block in section.blocks %}
        <div class="promotional-grid__item promotional-item-{{ block.id }}">
          {% case block.type %}
            {% when 'image-with-text' %}
            <div class="promotional-grid__container promo-image__text"></div>

            {% when 'banner' %}
            <div class="promotional-grid__container promotional-banner__wrapper">
              <div class="promotional-banner__content">
                <div class="banner-text__container">
                  {% if block.settings.banner_heading != blank %}
                    <div class="main__heading banner__heading">
                      <h2>{{ block.settings.banner_heading }}</h2>
                    </div>
                  {% endif %}

                  {% if block.settings.banner_text != blank %}
                    <div class="banner__text rte">
                      {{ block.settings.banner_text }}
                    </div>
                  {% endif %}
                </div>
                <div class="banner-button__wrapper">
                  {% if block.settings.banner_button_1 != blank %}
                    <a
                      class="btn btn__link btn__block"
                      href="{{ block.settings.banner_button_link_1 }}"
                      title="{{ block.settings.banner_button_1 }}">
                      {{ block.settings.banner_button_1 }}
                    </a>
                  {% endif %}
                  {% if block.settings.banner_button_2 != blank %}
                    <a
                      class="btn btn__link btn__outline"
                      href="{{ block.settings.banner_button_link_2 }}"
                      title="{{ block.settings.banner_button_2 }}">
                      {{ block.settings.banner_button_2 }}
                    </a>
                  {% endif %}
                </div>
              </div>
            </div>

            {% when 'product' %}

            {% when 'collection' %}



          {% endcase %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "t:sections.promotional-grid.name",
    "class": "main__section",
    "settings": [
      {
        "type": "header",
        "content": "t:sections.promotional-grid.settings.header_spacing.label"
      }, {
        "type": "range",
        "id": "margin_top",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "t:sections.promotional-grid.settings.header_spacing.top_spacing.label",
        "default": 16
      }, {
        "type": "range",
        "id": "margin_bottom",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "t:sections.promotional-grid.settings.header_spacing.bottom_spacing.label",
        "default": 16
      }
    ],
    "blocks": [
      {
        "type": "image-with-text",
        "name": "t:sections.promotional-grid.blocks.image-with-text.name",
        "settings": [
          {
            "type": "image_picker",
            "id": "promo_image",
            "label": "t:sections.promotional-grid.blocks.image-with-text.settings.image.label"
          },
          {
            "type": "text",
            "id": "subheading",
            "label": "t:sections.promotional-grid.blocks.image-with-text.settings.subheading.label",
            "default": "SubHeading"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "t:sections.promotional-grid.blocks.image-with-text.settings.heading.label",
            "default": "Image With Text"
          },
          {
            "type": "text",
            "id": "button_label",
            "label": "t:sections.promotional-grid.blocks.image-with-text.settings.button_label.label",
            "default": "Button"
          }, {
            "type": "url",
            "id": "button_link",
            "label": "t:sections.promotional-grid.blocks.image-with-text.settings.button_link.label"
          }, {
            "type": "select",
            "id": "block_width",
            "label": "t:sections.promotional-grid.blocks.image-with-text.settings.layout_width.label",
            "options": [
              {
                "value": "small",
                "label": "t:sections.promotional-grid.blocks.image-with-text.settings.layout_width.small.label"
              }, {
                "value": "medium",
                "label": "t:sections.promotional-grid.blocks.image-with-text.settings.layout_width.medium.label"
              }, {
                "value": "full",
                "label": "t:sections.promotional-grid.blocks.image-with-text.settings.layout_width.full.label"
              }
            ],
            "default": "full"
          }
        ]
      }, {
        "type": "banner",
        "name": "t:sections.promotional-grid.blocks.banner.name",
        "settings": [
          {
            "type": "text",
            "id": "banner_heading",
            "label": "t:sections.promotional-grid.blocks.banner.settings.banner_heading.label",
            "default": "Banner Promotion"
          },
          {
            "type": "textarea",
            "id": "banner_text",
            "label": "t:sections.promotional-grid.blocks.banner.settings.banner_text.label",
            "default": "Welcome to Our Shop"
          },
          {
            "type": "header",
            "content": "t:sections.promotional-grid.blocks.banner.settings.header_first_button.label"
          },
          {
            "type": "text",
            "id": "banner_button_1",
            "label": "t:sections.promotional-grid.blocks.banner.settings.header_first_button.button_label.label",
            "default": "Button"
          }, {
            "type": "url",
            "id": "banner_button_link_1",
            "label": "t:sections.promotional-grid.blocks.banner.settings.header_first_button.button_link.label"
          }, {
            "type": "header",
            "content": "t:sections.promotional-grid.blocks.banner.settings.header_second_button.label"
          }, {
            "type": "text",
            "id": "banner_button_2",
            "label": "t:sections.promotional-grid.blocks.banner.settings.header_second_button.button_label.label",
            "default": "Button"
          }, {
            "type": "url",
            "id": "banner_button_link_2",
            "label": "t:sections.promotional-grid.blocks.banner.settings.header_second_button.button_link.label"
          }, {
            "type": "color",
            "id": "banner_background_color",
            "label": "t:sections.promotional-grid.blocks.banner.settings.banner_background.label",
            "default": "#000000"
          }
        ]
      }, {
        "type": "product",
        "name": "t:sections.promotional-grid.blocks.product.name",
        "settings": [
          {
            "type": "product",
            "id": "promo_product",
            "label": "t:sections.promotional-grid.blocks.product.settings.promo_product.label"
          },
          {
            "type": "text",
            "id": "promo_heading",
            "label": "t:sections.promotional-grid.blocks.product.settings.promo_product_heading.label",
            "default": "Heading"
          },
          {
            "type": "textarea",
            "id": "promo_text",
            "label": "t:sections.promotional-grid.blocks.product.settings.promo_product_text.label",
            "default": "Description Text"
          },
          {
            "type": "checkbox",
            "id": "show_price",
            "label": "t:sections.promotional-grid.blocks.product.settings.show_price.label",
            "default": false
          }, {
            "type": "checkbox",
            "id": "show_timer",
            "label": "t:sections.promotional-grid.blocks.product.settings.show_timer.label",
            "default": false
          }, {
            "type": "text",
            "id": "promo_button_label",
            "label": "t:sections.promotional-grid.blocks.product.settings.button_label.label",
            "default": "Button"
          }, {
            "type": "url",
            "id": "promo_button_link",
            "label": "t:sections.promotional-grid.blocks.product.settings.button_link.label"
          }, {
            "type": "color",
            "id": "promo_background_color",
            "label": "t:sections.promotional-grid.blocks.product.settings.promo_background_color.label",
            "default": "#111111"
          }, {
            "type": "select",
            "id": "block_width",
            "label": "t:sections.promotional-grid.blocks.product.settings.layout_width.label",
            "options": [
              {
                "value": "small",
                "label": "t:sections.promotional-grid.blocks.product.settings.layout_width.small.label"
              }, {
                "value": "medium",
                "label": "t:sections.promotional-grid.blocks.product.settings.layout_width.medium.label"
              }, {
                "value": "full",
                "label": "t:sections.promotional-grid.blocks.product.settings.layout_width.full.label"
              }
            ],
            "default": "full"
          }
        ]
      }, {
        "type": "collection",
        "name": "t:sections.promotional-grid.blocks.collection.name",
        "settings": [
          {
            "type": "collection",
            "id": "promo_collection",
            "label": "t:sections.promotional-grid.blocks.collection.settings.promo_collection.label"
          },
          {
            "type": "text",
            "id": "collection_heading",
            "label": "t:sections.promotional-grid.blocks.collection.settings.promo_collection_heading.label",
            "default": "Heading"
          },
          {
            "type": "textarea",
            "id": "collection_text",
            "label": "t:sections.promotional-grid.blocks.collection.settings.promo_collection_text.label",
            "default": "Description Text"
          },
          {
            "type": "checkbox",
            "id": "show_collection_price",
            "label": "t:sections.promotional-grid.blocks.collection.settings.show_price.label",
            "default": false
          }, {
            "type": "checkbox",
            "id": "show_collection_timer",
            "label": "t:sections.promotional-grid.blocks.collection.settings.show_timer.label",
            "default": false
          }, {
            "type": "text",
            "id": "collection_button_label",
            "label": "t:sections.promotional-grid.blocks.collection.settings.button_label.label",
            "default": "Button"
          }, {
            "type": "url",
            "id": "collection_button_link",
            "label": "t:sections.promotional-grid.blocks.collection.settings.button_link.label"
          }, {
            "type": "color",
            "id": "collection_background_color",
            "label": "t:sections.promotional-grid.blocks.collection.settings.collection_background_color.label",
            "default": "#111111"
          }, {
            "type": "select",
            "id": "block_width",
            "label": "t:sections.promotional-grid.blocks.collection.settings.layout_width.label",
            "options": [
              {
                "value": "small",
                "label": "t:sections.promotional-grid.blocks.collection.settings.layout_width.small.label"
              }, {
                "value": "medium",
                "label": "t:sections.promotional-grid.blocks.collection.settings.layout_width.medium.label"
              }, {
                "value": "full",
                "label": "t:sections.promotional-grid.blocks.collection.settings.layout_width.full.label"
              }
            ],
            "default": "full"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "t:sections.promotional-grid.presets.name",
        "blocks": [
          {
            "type": "banner"
          }, {
            "type": "product"
          }, {
            "type": "collection"
          }
        ]
      }
    ],
    "disabled_on": {
      "groups": ["header"]
    }
  }
{% endschema %}