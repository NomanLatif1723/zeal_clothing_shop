{% style %}
  .main__section-{{ section.id }}{
    margin-top: 30px;
    margin-bottom: 30px;
  }

  @media only screen and (min-width:769px) {
    .main__section-{{ section.id }}{
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }
{% endstyle %}
{% schema %}
  {
    "name": "t:sections.promotional-grid.name",
    "class": "main__section",
    "settings": [
      {
        "type": "header",
        "content": "t:sections.marquee-text.settings.header_spacing.label"
      }, {
        "type": "range",
        "id": "margin_top",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "t:sections.marquee-text.settings.header_spacing.top_spacing.label",
        "default": 16
      }, {
        "type": "range",
        "id": "margin_bottom",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "t:sections.marquee-text.settings.header_spacing.bottom_spacing.label",
        "default": 16
      }
    ],
    "blocks": [
      {
        "type": "banner",
        "name": "t:sections.promotional-grid.blocks.banner.name",
        "settings": [
          {
            "type": "text",
            "id": "banner_heading",
            "label": "t:sections.promotional-grid.blocks.banner.settings.banner_heading.label",
            "default": "Heading"
          },
          {
            "type": "textarea",
            "id": "banner_text",
            "label": "t:sections.promotional-grid.blocks.banner.settings.banner_text.label",
            "default": "Welcome to Our Shop"
          },
          {
            "type": "header",
            "content": "t:sections.promotional-grid.blocks.banner.settings.header_first_button.label"
          },
          {
            "type": "text",
            "id": "banner_button_1",
            "label": "t:sections.promotional-grid.blocks.banner.settings.header_first_button.button_label.label",
            "default": "Button"
          }, {
            "type": "url",
            "id": "banner_button_link_1",
            "label": "t:sections.promotional-grid.blocks.banner.settings.header_first_button.button_link.label"
          }, {
            "type": "header",
            "content": "t:sections.promotional-grid.blocks.banner.settings.header_second_button.label"
          }, {
            "type": "text",
            "id": "banner_button_2",
            "label": "t:sections.promotional-grid.blocks.banner.settings.header_second_button.button_label.label",
            "default": "Button"
          }, {
            "type": "url",
            "id": "banner_button_link_2",
            "label": "t:sections.promotional-grid.blocks.banner.settings.header_second_button.button_link.label"
          }, {
            "type": "color",
            "id": "banner_background_color",
            "label": "t:sections.promotional-grid.blocks.banner.settings.banner_background.label",
            "default": "#000000"
          }
        ]
      }, {
        "type": "product",
        "name": "t:sections.promotional-grid.blocks.product.name",
        "settings": [
          {
            "type": "product",
            "id": "promo_product",
            "label": "Product"
          },
          {
            "type": "text",
            "id": "promo_heading",
            "label": "Heading",
            "default": "Heading"
          },
          {
            "type": "textarea",
            "id": "promo_text",
            "label": "Text",
            "default": "Description Text"
          },
          {
            "type": "checkbox",
            "id": "show_price",
            "label": "Show Price",
            "default": false
          }, {
            "type": "checkbox",
            "id": "show_timer",
            "label": "Show Timer",
            "default": false
          }, {
            "type": "text",
            "id": "promo_button_label",
            "label": "Button",
            "default": "Button"
          }, {
            "type": "url",
            "id": "promo_button_link",
            "label": "Link"
          }, {
            "type": "color",
            "id": "promo_background_color",
            "label": "Background",
            "default": "#111111"
          }
        ]
      }, {
        "type": "collection",
        "name": "t:sections.promotional-grid.blocks.collection.name",
        "settings": [
          {
            "type": "collection",
            "id": "promo_collection",
            "label": "Product"
          },
          {
            "type": "text",
            "id": "collection_heading",
            "label": "Heading",
            "default": "Heading"
          },
          {
            "type": "textarea",
            "id": "collection_text",
            "label": "Text",
            "default": "Description Text"
          },
          {
            "type": "checkbox",
            "id": "show_collection_price",
            "label": "Show Price",
            "default": false
          }, {
            "type": "checkbox",
            "id": "show_collection_timer",
            "label": "Show Timer",
            "default": false
          }, {
            "type": "text",
            "id": "collection_button_label",
            "label": "Button",
            "default": "Button"
          }, {
            "type": "url",
            "id": "collection_button_link",
            "label": "Link"
          }, {
            "type": "color",
            "id": "collection_background_color",
            "label": "Background",
            "default": "#111111"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "t:sections.promotional-grid.presets.name",
        "blocks": [
          {
            "type": "banner"
          }, {
            "type": "product"
          }, {
            "type": "collection"
          }
        ]
      }
    ],
    "disabled_on": {
      "groups": ["header"]
    }
  }
{% endschema %}