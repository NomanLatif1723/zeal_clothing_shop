<style>
  .main__section-{{ section.id }}{
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
</style>
<div class="text__container main__section-{{ section.id }}">
  <div class="page__width">
    <div class="text__wrapper text__align-{{ section.settings.text_alignment }}">
      {% if section.settings.text_sub_heading != blank %}
        <div class="sub__heading">{{ section.settings.text_sub_heading }}</div>
      {% endif %}
      {% if section.settings.text_main_heading != blank %}
        <div class="main__heading rich-text__heading">
          <h2>{{ section.settings.text_main_heading }}</h2>
        </div>
      {% endif %}
      {% if section.settings.text_description != blank %}
        <div class="rich-text__text">
          <div class="rte">
            {{ section.settings.text_description }}
          </div>
        </div>
      {% endif %}
      <div class="rich-text__buttons">
        {% if section.settings.shop_btn_1 != blank %}
          <div class="btn btn__primary">
            <a
              href="{{ section.settings.button_link_1 }}"
              class="btn__link"
              title="{{ section.settings.shop_btn_1 }}">{{ section.settings.shop_btn_1 }}</a>
          </div>
        {% endif %}
        {% if section.settings.shop_btn_2 != blank %}

          <div class="btn btn__primary">
            <a
              href="{{ section.settings.button_link_2 }}"
              class="btn__link"
              title="{{ section.settings.shop_btn_2 }}">{{ section.settings.shop_btn_2 }}</a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "t:sections.richtext.name",
    "class": "main__section",
    "settings": [
      {
        "type": "select",
        "id": "text_alignment",
        "label": "t:sections.richtext.settings.alignment.label",
        "options": [
          {
            "value": "left",
            "label": "t:sections.richtext.settings.alignment.options.left.label"
          }, {
            "value": "center",
            "label": "t:sections.richtext.settings.alignment.options.center.label"
          }, {
            "value": "right",
            "label": "t:sections.richtext.settings.alignment.options.right.label"
          }
        ],
        "default": "center"
      },
      {
        "type": "text",
        "id": "text_sub_heading",
        "label": "t:sections.richtext.settings.richtext_subheading.label",
        "default": "Sub Heading"
      },
      {
        "type": "text",
        "id": "text_main_heading",
        "label": "t:sections.richtext.settings.richtext_main_heading.label",
        "default": "Heading"
      },
      {
        "type": "richtext",
        "id": "text_description",
        "label": "t:sections.richtext.settings.richtext_text_description.label"
      }, {
        "type": "header",
        "content": "t:sections.richtext.settings.header_first_button.label"
      }, {
        "type": "text",
        "id": "shop_btn_1",
        "label": "t:sections.richtext.settings.header_first_button.button_label.label",
        "default": "Button"
      }, {
        "type": "url",
        "id": "button_link_1",
        "label": "t:sections.richtext.settings.header_first_button.button_link.label"
      }, {
        "type": "header",
        "content": "t:sections.richtext.settings.header_second_button.label"
      }, {
        "type": "text",
        "id": "shop_btn_2",
        "label": "t:sections.richtext.settings.header_second_button.button_label.label",
        "default": "Button"
      }, {
        "type": "url",
        "id": "button_link_2",
        "label": "t:sections.richtext.settings.header_second_button.button_link.label"
      }, {
        "type": "header",
        "content": "t:sections.richtext.settings.header_spacing.label"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "t:sections.richtext.settings.header_spacing.top_padding.label",
        "default": 16
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "t:sections.richtext.settings.header_spacing.bottom_padding.label",
        "default": 16
      }


    ],
    "presets": [
      {
        "name": "t:sections.richtext.name"
      }
    ]
  }
{% endschema %}