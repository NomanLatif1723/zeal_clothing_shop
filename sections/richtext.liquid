<style>
  .main__section-{{ section.id }}{
    margin-top: {{ section.settings.margin_top }}
    px;
    margin-bottom: {{ section.settings.margin_bottom }}
    px;
  }
</style>
<div class="text__container main__section-{{ section.id }}">
  <div class="page__width">
    <div class="text__wrapper text__align-{{ section.settings.text_alignment }}">
      {% if section.settings.text_sub_heading != blank %}
        <div class="sub__heading">{{ section.settings.text_sub_heading }}</div>
      {% endif %}
      {% if section.settings.text_main_heading != blank %}
        <div class="main__heading rich-text__heading">
          <h2>{{ section.settings.text_main_heading }}</h2>
        </div>
      {% endif %}
      {% if section.settings.text_description != blank %}
        <div class="rich-text__text">
          <div class="rte">
            {{ section.settings.text_description }}
          </div>
        </div>
      {% endif %}
      <div class="rich-text__buttons">
        {% if section.settings.shop_btn_1 != blank %}
          <div class="btn btn__primary">
            <a
              href="{{ section.settings.button_link_1 }}"
              class="btn__link"
              title="{{ section.settings.shop_btn_1 }}">{{ section.settings.shop_btn_1 }}</a>
          </div>
        {% endif %}
        {% if section.settings.shop_btn_2 != blank %}

          <div class="btn btn__primary">
            <a
              href="{{ section.settings.button_link_2 }}"
              class="btn__link"
              title="{{ section.settings.shop_btn_2 }}">{{ section.settings.shop_btn_2 }}</a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "t:sections.richtext.name",
    "class": "main__section",
    "max_blocks": 4,
    "settings": [
      {
        "type": "select",
        "id": "text_alignment",
        "label": "t:sections.richtext.settings.alignment.label",
        "options": [
          {
            "value": "left",
            "label": "t:sections.richtext.settings.alignment.options.left.label"
          }, {
            "value": "center",
            "label": "t:sections.richtext.settings.alignment.options.center.label"
          }, {
            "value": "right",
            "label": "t:sections.richtext.settings.alignment.options.right.label"
          }
        ],
        "default": "center"
      }, {
        "type": "header",
        "content": "t:sections.richtext.settings.header_spacing.label"
      }, {
        "type": "range",
        "id": "margin_top",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "t:sections.richtext.settings.header_spacing.top_spacing.label",
        "default": 16
      }, {
        "type": "range",
        "id": "margin_bottom",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "t:sections.richtext.settings.header_spacing.bottom_spacing.label",
        "default": 16
      }
    ],
    "blocks": [
      {
        "type": "subheading",
        "name": "t:sections.richtext.blocks.subheading.name",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "text_sub_heading",
            "label": "t:sections.richtext.blocks.subheading.settings.richtext_subheading.label",
            "default": "Sub Heading"
          }
        ]
      }, {
        "type": "heading",
        "name": "t:sections.richtext.blocks.heading.name",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "text_main_heading",
            "label": "t:sections.richtext.blocks.heading.settings.richtext_main_heading.label",
            "default": "Heading"
          }

        ]
      }, {
        "type": "text",
        "name": "t:sections.richtext.blocks.text.name",
        "limit": 1,
        "settings": [
          {
            "type": "richtext",
            "id": "text_description",
            "label": "t:sections.richtext.blocks.text.settings.richtext_text_description.label"
          }
        ]
      }, {
        "type": "button",
        "name": "t:sections.richtext.blocks.button.name",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "richtext_button_label",
            "label": "t:sections.richtext.blocks.button.settings.button_label.label",
            "default": "Button"
          }, {
            "type": "url",
            "id": "richtext_button_link",
            "label": "t:sections.richtext.blocks.button.settings.button_link.label"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "t:sections.richtext.presets.name",
        "blocks": [
          {
            "type": "subheading"
          }, {
            "type": "heading"
          }, {
            "type": "text"
          }
        ]
      }
    ]
  }
{% endschema %}