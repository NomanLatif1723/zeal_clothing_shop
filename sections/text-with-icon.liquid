<div class="text__image-container main__section-{{ section.id }}">
  <div class="text__image-wrapper">
    {% for block in section.blocks %}
      <div class="text__image-item">
        <div class="image__banner">
          {% if block.settings.brand_logo != blank %}
            {% assign logo__classes = 'brand__logo-img logo__image-{{ forloop.index }}' %}
            {% render 'image-element', image-element: block.settings.brand_logo, img-width: 40, classes: logo__classes %}
          {% else %}
            {{ 'image' | placeholder_svg_tag: "placeholder__Image icon__placeholder" }}
          {% endif %}
        </div>
        {% if block.settings.brand_heading != blank %}
          <div class="main__heading text__image-heading">
            <h2>{{ block.settings.brand_heading }}</h2>
          </div>
        {% endif %}
        {% if block.settings.brand_text != blank %}
          <div class="text__image-text">
            <div class="rte">
              {{ block.settings.brand_text }}
            </div>
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>
{% schema %}
  {
    "name": "t:sections.text-with-icon.name",
    "class": "main__section",
    "settings": [
      {
        "type": "header",
        "content": "Section Spacing"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "Padding Top",
        "default": 16
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "Padding Bottom",
        "default": 16
      }
    ],
    "blocks": [
      {
        "type": "slide",
        "name": "Slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "brand_logo",
            "label": "Logo"
          }, {
            "type": "text",
            "id": "brand_heading",
            "label": "Heading",
            "default": "Heading"
          }, {
            "type": "textarea",
            "id": "brand_text",
            "label": "text",
            "default": "Welcome To Our Store"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "t:sections.text-with-icon.name",
        "blocks": [
          {
            "type": "slide"
          }, {
            "type": "slide"
          }, {
            "type": "slide"
          }
        ]
      }
    ]
  }
{% endschema %}