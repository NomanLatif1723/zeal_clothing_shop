<style>
  .main__section-{{ section.id }}{
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
</style>
<div class="text__image-container main__section-{{ section.id }} text__container-desktop">
  <div class="text__image-wrapper">
    {% for block in section.blocks %}
      <div class="text__image-item">
        <div class="image__banner">
          {% if block.settings.brand_logo != blank %}
            {% assign logo__classes = 'brand__logo-img logo__image-{{ forloop.index }}' %}
            {% render 'image-element', img-element: block.settings.brand_logo, img-width: 40, classes: logo__classes %}
          {% else %}
            {{ 'image' | placeholder_svg_tag: "placeholder__Image icon__placeholder" }}
          {% endif %}
        </div>
        {% if block.settings.brand_heading != blank %}
          <div class="main__heading text__image-heading">
            <h3>{{ block.settings.brand_heading }}</h3>
          </div>
        {% endif %}
        {% if block.settings.brand_text != blank %}
          <div class="text__image-text">
            <div class="rte">{{ block.settings.brand_text }}
            </div>
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>
<div class="text__image-container main__section-{{ section.id }} text__container-mobile swiper brands__slider">
  <div class="text__image-wrapper swiper-wrapper">
    {% for block in section.blocks %}
      <div class="text__image-item swiper-slide">
        <div class="image__banner">
          {% if block.settings.brand_logo != blank %}
            {% assign logo__classes = 'brand__logo-img logo__image-{{ forloop.index }}' %}
            {% render 'image-element', img-element: block.settings.brand_logo, img-width: 40, classes: logo__classes %}
          {% else %}
            {{ 'image' | placeholder_svg_tag: "placeholder__Image icon__placeholder" }}
          {% endif %}
        </div>
        {% if block.settings.brand_heading != blank %}
          <div class="main__heading text__image-heading">
            <h3>{{ block.settings.brand_heading }}</h3>
          </div>
        {% endif %}
        {% if block.settings.brand_text != blank %}
          <div class="text__image-text">
            <div class="rte">{{ block.settings.brand_text }}
            </div>
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
  <div class="swiper-button-next"></div>
  <div class="swiper-button-prev"></div>
</div>
{% schema %}
  {
    "name": "t:sections.text-with-icon.name",
    "class": "main__section",
    "settings": [
      {
        "type": "header",
        "content": "t:sections.text-with-icon.header_spacing.label"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "t:sections.text-with-icon.header_spacing.top_padding.label",
        "default": 16
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "t:sections.text-with-icon.header_spacing.bottom_padding.label",
        "default": 16
      }
    ],
    "blocks": [
      {
        "type": "slide",
        "name": "t:sections.text-with-icon.blocks.slide.name",
        "settings": [
          {
            "type": "image_picker",
            "id": "brand_logo",
            "label": "t:sections.text-with-icon.blocks.slide.settings.slide_logo_label.label"
          }, {
            "type": "text",
            "id": "brand_heading",
            "label": "t:sections.text-with-icon.blocks.slide.settings.slide_heading.label",
            "default": "Heading"
          }, {
            "type": "textarea",
            "id": "brand_text",
            "label": "t:sections.text-with-icon.blocks.slide.settings.slide_text.label",
            "default": "Welcome To Our Store"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "t:sections.text-with-icon.presets.name",
        "blocks": [
          {
            "type": "slide"
          }, {
            "type": "slide"
          }, {
            "type": "slide"
          }
        ]
      }
    ]
  }
{% endschema %}