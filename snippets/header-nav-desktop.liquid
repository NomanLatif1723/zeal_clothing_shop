{% liquid
  assign is_megamenu = false
  if mega_menu
    assign is_megamenu = true
  endif
%}
<nav class="header__menu header-desktop__menu{% if mobile_menu != blank %} desktop-menu__hide{% endif %}">
  <ul class="menu__list main-menu__list">
    {%- for link in main_menu.links -%}
      {%- if link.title != menu_item_label -%}
        <li class="menu__item{% if mega_menu %} mega-menu__item{% endif %}">
          <a
            href="{{ link.url }}"
            title="{{ link.title }}"
            class="menu-item__link">
            {{ link.title }}
            {%- if link.links != blank -%}
              {%- render 'icon-arrow-down' -%}
            {%- endif -%}
          </a>
          {% if link.links != blank %}
            <ul class="menu__list child-menu__list">
              {%- for childlink in link.links -%}
                <li class="menu__item child-menu__item">
                  <a
                    href="{{ childlink.url }}"
                    title="{{ childlink.title }}"
                    class="menu-item__link child-menu__item--link">{{ childlink.title }}
                    {%- if childlink.links != blank -%}
                      {%- render 'icon-arrow-down' -%}
                    {%- endif -%}
                  </a>
                  {%- if childlink.links != blank %}
                    <ul class="menu__list grandchild-menu__list">
                      {%- for grandchild in childlink.links -%}
                        <li class="menu__item grandchild-menu__item">
                          <a
                            href="{{ grandchild.url }}"
                            title="{{ grandchild.title }}"
                            class="menu-item__link grandchild-menu__item--link">{{ grandchild.title }}</a>
                        </li>
                      {%- endfor -%}
                    </ul>
                  {%- endif -%}
                </li>
              {%- endfor -%}
            </ul>
          {%- endif -%}
        </li>
        {%- elsif link.title == menu_item_label -%}
        <li class="mega-menu__item">
          <a class="menu-item__link" href="{{ link.url }}" title="{{ link.title }}">{{ link.title }}
          {%- if link.links != blank -%}
            {%- render 'icon-arrow-down' -%}
          {%- endif -%}
          </a>
          {%- if link.links != blank -%}
            <div class="mega-menu__container">
              <div class="page__width">
                <div class="mega-container__flex">
                  <div class="mega-container__block mega-menu__dropdowns">
                    <div class="child-mega__list">
                      {%- for childlink in link.links -%}
                        <div class="child-mega__item">
                          <a class="menu-item__link" href="{{ childlink.url }}" title="{{ childlink.title }}">
                            <h5>{{ childlink.title }}</h5>
                          </a>
                          {%- if childlink.links != blank -%}
                            <div class="grandchild-mega__list">
                              {%- for grandchild in childlink.links -%}
                              <div class="grandchild-mega__item">
                                <a class="menu-item__link" href="{{ grandchild.url }}" title="{{ grandchild.title }}">{{ grandchild.title }}</a>
                              </div>
                              {%- endfor -%}
                            </div>
                          {%- endif -%}
                        </div>
                      {%- endfor -%}
                    </div>
                    
                  </div>
                  <div class="mega-container__block mega-menu__images"></div>
                </div>
              </div>
            </div>
          {%- endif -%}
        </li>
      {%- endif -%}
    {%- endfor -%}
  </ul>
</nav>
<nav class="header__menu header-mobile__menu">
  <ul class="menu__list main-menu__list">
    {%- for link in mobile_menu.links -%}
      <li class="menu__item">
        <a
          href="{{ link.url }}"
          title="{{ link.title }}"
          class="menu-item__link">
          {{ link.title }}
          {%- if link.links != blank -%}
            {%- render 'icon-arrow-down' -%}
          {%- endif -%}
        </a>
        {%- if link.links != blank -%}
          <ul class="menu__list child-menu__list">
            {%- for childlink in link.links -%}
              <li class="menu__item child-menu__item">
                <a
                  href="{{ childlink.url }}"
                  title="{{ childlink.title }}"
                  class="menu-item__link child-menu__item--link">{{ childlink.title }}
                  {%- if childlink.links != blank -%}
                    {%- render 'icon-arrow-down' -%}
                  {%- endif -%}
                </a>
                {%- if childlink.links != blank -%}
                  <ul class="menu__list grandchild-menu__list">
                    {%- for grandchild in childlink.links -%}
                      <li class="menu__item grandchild-menu__item">
                        <a
                          href="{{ grandchild.url }}"
                          title="{{ grandchild.title }}"
                          class="menu-item__link grandchild-menu__item--link">{{ grandchild.title }}</a>
                      </li>
                    {%- endfor -%}
                  </ul>
                {%- endif -%}
              </li>
            {%- endfor -%}
          </ul>
        {%- endif -%}
      </li>
    {%- endfor -%}
  </ul>
</nav>