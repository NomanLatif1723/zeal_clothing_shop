<nav class="header__menu header-mobile__menu">
  <ul class="drawer__list main-drawer__list">
    {%- for link in mobile_menu.links -%}
      <li class="drawer-menu__item">
        <a
          href="{{ link.url }}"
          title="{{ link.title }}"
          class="menu-item__link">
          {{ link.title }}
          {%- if link.links != blank -%}
            {%- render 'icon-arrow-down' -%}
          {%- endif -%}
        </a>
        {%- if link.links != blank -%}
          <ul class="drawer__list drawer-child__list">
            {%- for childlink in link.links -%}
              <li class="drawer-menu__item drawer-child__item">
                <a
                  href="{{ childlink.url }}"
                  title="{{ childlink.title }}"
                  class="menu-item__link drawer-child__item--link">{{ childlink.title }}
                  {%- if childlink.links != blank -%}
                    {%- render 'icon-arrow-down' -%}
                  {%- endif -%}
                </a>
                {%- if childlink.links != blank -%}
                  <ul class="drawer__list drawer-grandchild__list">
                    {%- for grandchild in childlink.links -%}
                      <li class="drawer-menu__item drawer-grandchild__item">
                        <a
                          href="{{ grandchild.url }}"
                          title="{{ grandchild.title }}"
                          class="menu-item__link drawer-grandchild__item--link">{{ grandchild.title }}</a>
                      </li>
                    {%- endfor -%}
                  </ul>
                {%- endif -%}
              </li>
            {%- endfor -%}
          </ul>
        {%- endif -%}
      </li>
    {%- endfor -%}
  </ul>
</nav>