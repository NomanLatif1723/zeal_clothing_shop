<div id="QuickShopModal-{{ product.id }}" class="quick-shop__modal hidden" data-product-id="{{ product.id }}">
  <div class="quick-shop__box">
    <div class="modal__centered">
      <div class="modal__centered-content">
        <div id="QuickShopHolder-{{ product.handle }}">
          {{ product.title }}
          {{ product.price }}
          {{ product.featured_image }}
        </div>
      </div>
      <button type="button" class="quickview-modal__close">
        {%- render 'icon-close' -%}
      </button>
    </div>
  </div>
</div>