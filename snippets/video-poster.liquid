{%- if cover_image != blank -%}
  <div class="video-section__poster">   
    {{ cover_image | image_url: width: cover_image.width | image_tag: loading: 'lazy', sizes: '100vw', widths: '240,480,600,1024,2048', class: "video-poster__image" }}
  {%- else -%}
    {{ 'lifestyle-1' | placeholder_svg_tag: "placeholder__image" }}
    <div class="video-poster__content">
      <div class="video-section__content--box">
        <div class="video-section__box--element">
          {%- if sub_heading != blank -%}
            <div class="sub__heading video-section__subheading">
              {{ sub_heading }}
            </div>
          {%- endif -%}
          {%- if heading != blank -%}
            <div class="video-section__heading">
              <h1>{{ heading }}</h1>
            </div>
          {%- endif -%}
          <div class="video-section__playicon">
            {% render 'icon-play' %}
          </div>
        </div>
      </div>
    </div>
  </div>
{%- endif -%}